<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.2.0"
           xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <cm:property-placeholder persistent-id="org.codice.security.filter.login.LoginFilter"
                             placeholder-prefix="$loginfilter{" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="signatureProperties" value="file:${ddf.home}/etc/ws-security/server/signature.properties"/>
            <!-- we may or may not need these encryption properties, just put them here for now -->
            <cm:property name="encryptionProperties" value="file:${ddf.home}/etc/ws-security/server/encryption.properties"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <reference id="securityManager" interface="ddf.security.service.SecurityManager" />

    <bean id="filter" class="org.codice.security.filter.login.LoginFilter">
        <property name="securityManager" ref="securityManager" />
        <property name="signaturePropertiesFile" value="$loginfilter{signatureProperties}"/>
    </bean>

    <service ref="filter"
             interface="javax.servlet.Filter" ranking="99">
        <service-properties>
            <entry key="filter-name" value="login-filter"/>
            <entry key="urlPatterns" value="/*"/>
        </service-properties>
    </service>

</blueprint>