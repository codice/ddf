<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>ddf</artifactId>
		<groupId>ddf</groupId>
		<version>2.2.0.RC1</version>
	</parent>
	<groupId>ddf.security</groupId>
	<artifactId>security</artifactId>

	<packaging>pom</packaging>
	<name>DDF Security</name>
	
	<properties>
		<shiro.version>1.2.1</shiro.version>
		<cas.client.version>3.1.10</cas.client.version>
        <cas.client.bundle.version>${cas.client.version}_1</cas.client.bundle.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.apache.shiro</groupId>
				<artifactId>shiro-core</artifactId>
				<version>${shiro.version}</version>
			</dependency>
			<dependency>
				<groupId>org.jasig.cas</groupId>
				<artifactId>cas-client-core</artifactId>
				<version>${cas.client.version}</version>
			</dependency>
			<dependency>
				<groupId>ddf.security.pdp</groupId>
				<artifactId>security-pdp-xacmlapi</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>ddf.security.sts</groupId>
				<artifactId>security-sts-clientconfig</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>ddf.security.pdp</groupId>
				<artifactId>security-pdp-xacmlprocessor</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>ddf.security.pdp</groupId>
				<artifactId>security-pdp-authzrealm</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>ddf.security.encryption</groupId>
				<artifactId>security-encryption-impl</artifactId>
				<version>${project.version}</version>
			</dependency>
            <dependency>
                <groupId>ddf.security.encryption</groupId>
                <artifactId>security-encryption-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            
            <!-- CXF Libraries  -->
            <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-ws-policy</artifactId>
                <version>${cxf.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-frontend-jaxws</artifactId>
                <version>${cxf.version}</version>
            </dependency>
		</dependencies>
	</dependencyManagement>

	<modules>
        <module>encryption</module>
        <module>core</module>
        <module>sts</module>
		<module>cas</module>
        <module>pdp</module>
		<module>pep</module>
	</modules>
</project>
