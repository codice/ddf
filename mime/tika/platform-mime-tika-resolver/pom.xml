<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>mime-tika-pom</artifactId>
		<groupId>ddf.mime.tika</groupId>
		<version>2.4.1-SNAPSHOT</version>
	</parent>

	<artifactId>mime-tika-resolver</artifactId>
	<name>DDF :: MIME :: Tika :: Tika MIME Resolver</name>
	<packaging>bundle</packaging>

	<dependencies>
		<dependency>
			<groupId>ddf.mime.core</groupId>
			<artifactId>mime-core-api</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.compendium</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-ext</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.tika</groupId>
			<artifactId>tika-core</artifactId>
			<version>1.2</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Embed-Dependency>tika-core</Embed-Dependency>
						<Export-Package />
						<Import-Package>
							ddf.mime,
							javax.crypto,
							javax.xml.namespace,
							javax.xml.parsers,
							javax.xml.transform,
							javax.xml.transform.dom,
							javax.xml.transform.sax,
							org.apache.commons.io,
							org.slf4j,
							org.slf4j.ext,
							org.osgi.framework,
							org.osgi.service.blueprint,
							org.osgi.service.cm,
							org.osgi.util.tracker,
							org.w3c.dom,
							org.xml.sax,
							org.xml.sax.helpers
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>