                    </includes>
                    <argLine>-Dddf.version=${project.version} -Djava.awt.headless=true -noverify
                    </argLine>
                    <systemPropertyVariables>
                        <acdebuggerEnabled>${acdebugger.enabled}</acdebuggerEnabled>
                        <acdebuggerPort>${acdebugger.port}</acdebuggerPort>
                    </systemPropertyVariables>
                </configuration>
                <executions>
                    <execution>
