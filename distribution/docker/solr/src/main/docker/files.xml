<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0">
  <dependencySets>
    <dependencySet>
      <includes>
        <include>*:*:txt:*</include>
        <include>*:*:xml:*</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <outputFileNameMapping>${artifact.classifier}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>*:jts-core</include>
        <include>*:solr-xpath</include>
      </includes>
      <outputDirectory>.</outputDirectory>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>.</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>