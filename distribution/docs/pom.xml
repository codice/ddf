<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ddf</groupId>
        <artifactId>distribution</artifactId>
        <version>2.8.0-SNAPSHOT</version>
    </parent>

    <artifactId>docs</artifactId>
    <name>DDF DOCS</name>

    <build>
        <plugins>
            <plugin>
                <groupId>de.saumya.mojo</groupId>
                <artifactId>gem-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.asciidoctor</groupId>
                <artifactId>asciidoctor-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>ddf.admin</groupId>
                                    <artifactId>docs</artifactId>
                                    <version>${ddf.admin.app.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/apps/admin</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ddf.catalog</groupId>
                                    <artifactId>docs</artifactId>
                                    <version>${ddf.catalog.app.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/apps/catalog</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ddf.content</groupId>
                                    <artifactId>docs</artifactId>
                                    <version>${ddf.content.app.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/apps/content</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ddf.platform</groupId>
                                    <artifactId>docs</artifactId>
                                    <version>${ddf.platform.app.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/apps/platform</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ddf.platform.security</groupId>
                                    <artifactId>docs</artifactId>
                                    <version>${ddf.platform.app.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/apps/security</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.codice.ddf.spatial</groupId>
                                    <artifactId>docs</artifactId>
                                    <version>${ddf.spatial.app.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/apps/spatial</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ddf.ui</groupId>
                                    <artifactId>docs</artifactId>
                                    <version>${ddf.searchui.app.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/apps/ui</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>codice</id>
            <name>Codice Repository</name>
            <url>http://artifacts.codice.org/content/groups/public/</url>
        </repository>
    </repositories>

</project>
