#!/usr/bin/env bash

# Store arguments for use in local functions
FIRST_ARGUMENT=$1
ALL_ARGUMENTS=$@

# Declare Karaf executable's return code
KARAF_EXEC_RC=0

# Useful directories
SCRIPTDIR=$(dirname $0)
HOME_DIR=$(cd "${SCRIPTDIR}/.."; pwd -P)

# Useful files
PROPERTIES_FILE=$HOME_DIR/etc/custom.system.properties
RESTART_FILE="$SCRIPTDIR/restart.jvm"
SOLR_EXEC=${SCRIPTDIR}/ddfsolr
GET=${SCRIPTDIR}/get_property

# Flags
START_KARAF="false"
START_SOLR="false"

refresh_properties() {
    # Extract values from Java properties file
    START_KARAF=$($GET "start.ddf")
    START_SOLR=$($GET "start.solr")
}


# Return 0 (success/true) if ddf_on_error.sh created a restart file
is_restarting() {
    local RC=1
    if [ -f "$RESTART_FILE" ]; then
        RC=0
    fi
    return $RC
}

# Remove the restart file so we can detect later if restart was requested
clear_restart_flag() {
  rm -f $RESTART_FILE
}

# Return 0 (success/true) if this script should start and stop Solr
managing_solr() {
    local RC=1
    if [ "$START_SOLR" = "true" ]; then
        RC=0
    fi
    return $RC
}

shutdown_no_java_home() {
    # Shutdown if JAVA_HOME is not set
    if [ -z $JAVA_HOME ]; then
        echo "JAVA_HOME not set. Set JAVA_HOME to proceed - exiting."
        exit 1
    fi
}

attempt_startup() {
    if managing_solr; then
        $SOLR_EXEC restart
    fi

    if [ "$START_KARAF" = "true" ]; then
        # Process suspended while Karaf is running
        ${SCRIPTDIR}/karaf ${ALL_ARGUMENTS}
        KARAF_EXEC_RC=$?
    fi
}

attempt_shutdown() {
    if managing_solr; then
        $SOLR_EXEC stop
    fi

    if is_restarting; then
        echo "Restarting processes..."
    else
        exit $KARAF_EXEC_RC
    fi
}

while true; do
    clear_restart_flag
    refresh_properties
    shutdown_no_java_home
    attempt_startup
    attempt_shutdown
done