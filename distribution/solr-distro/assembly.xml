<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>

            <includes>
                <include>ddf.platform.solr:solr-xpath</include>
            </includes>
            <outputDirectory>/plugins</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>
                    org.locationtech.jts:jts-core
                </include>
            </includes>
            <outputDirectory>/server/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <!--This can be removed once Solr is upgraded to 7.5/8.0-->
            <!--https://issues.apache.org/jira/browse/SOLR-12538-->
            <directory>src/main/resources/solrFiles</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/solr-${solr.version}</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
