<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.codice:lux</include>
                <include>net.sf.saxon:Saxon-HE</include>
                <include>org.codehaus.woodstox:stax2-api</include>
                <include>com.fasterxml.woodstox:woodstox-core</include>
                <include>ddf.platform.solr:solr-xpath</include>
            </includes>
            <outputDirectory>/plugins</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>
                    org.locationtech.jts:jts-core
                </include>
            </includes>
            <outputDirectory>/server/solr-webapp/webapp/WEB-INF/lib</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.codice.pro-grade:pro-grade</include>
            </includes>
            <outputDirectory>/security</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <!-- The order of the <fileSet> elements is important. The assembly plugin will not
        replace an existing file. Therefore, files that override behavior in the Apache Solr
        distribution must come before the Apache Solr files themselves. -->

        <!-- Files with executable permissions -->
        <fileSet>
            <directory>src/main/resources
            </directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>bin/*.cmd</exclude>
            </excludes>
            <lineEnding>unix</lineEnding>
            <fileMode>0750</fileMode>
        </fileSet>

        <fileSet>
            <directory>src/main/resources
            </directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>bin/*.cmd</include>
            </includes>
            <lineEnding>dos</lineEnding>
            <fileMode>0750</fileMode>
        </fileSet>

        <!-- The rest of the files. No executable permissions. -->
        <fileSet>
            <fileMode>0644</fileMode>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>

        <!--The files from the Apache Solr distribution-->
        <fileSet>
            <directory>${project.build.directory}/solr-${solr.version}</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
