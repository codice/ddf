<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.codice:lux</include>
                <include>net.sf.saxon:Saxon-HE</include>
                <include>org.codehaus.woodstox:stax2-api</include>
                <include>com.fasterxml.woodstox:woodstox-core</include>
                <include>ddf.platform.solr:solr-xpath</include>
            </includes>
            <outputDirectory>/plugins</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>
                    org.locationtech.jts:jts-core
                </include>
            </includes>
            <outputDirectory>/server/lib</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.codice.pro-grade:pro-grade</include>
            </includes>
            <outputDirectory>/security</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <!-- The order of the <fileSet> elements is important. The assumbly plugin will not
            replace an existing file. Therefore, files that override behavior in the Apache Solr
            distribution must be come before the Apache Solr files themselves. -->

            <!-- Files with executable permissions -->
            <directory>src/main/resources
            </directory>
            <outputDirectory>/</outputDirectory>
            <!--These changes are included to turn on Pro-Grade Security Manager for Solr-->
            <includes>
                <include>security/solr-default.policy</include>
                <include>bin/solr</include>
                <!--This can be changed once Solr is upgraded to 7.5/8.0-->
                <!--https://issues.apache.org/jira/browse/SOLR-12538-->
                <include>bin/solr.cmd</include>
                <!--These files lower the soft commit default to 1 second-->
                <include>bin/solr.in.cmd</include>
                <include>bin/solr.in.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <!-- The rest of the files. Executable permissions unecessary. -->
        <fileSet>
            <fileMode>0644</fileMode>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>

        <!--The files from the Apache Solr distribution-->
        <fileSet>
            <directory>${project.build.directory}/solr-${solr.version}</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
