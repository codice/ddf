<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="undeliveredMessagesPlugin"
          class="org.codice.ddf.broker.ui.UndeliveredMessagesApplicationPlugin"/>

    <bean id="mBeanServer" class="java.lang.management.ManagementFactory"
          factory-method="getPlatformMBeanServer"/>

    <bean id="undeliveredMessages" class="org.codice.ddf.broker.ui.UndeliveredMessages"
          destroy-method="destroy" init-method="init">
        <argument ref="mBeanServer"/>
    </bean>

    <service interface="org.codice.ddf.admin.application.plugin.ApplicationPlugin"
             ref="undeliveredMessagesPlugin"/>
</blueprint>