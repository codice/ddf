<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.codice.ddf.spatial</groupId>
        <artifactId>wfs-v1.0.0</artifactId>
        <version>2.6.0-SNAPSHOT</version>
    </parent>
    <artifactId>spatial-wfs-v1_0_0-endpoint</artifactId>
    <packaging>bundle</packaging>
    <name>DDF :: Spatial :: WFS :: 1.0.0 :: Endpoint</name>

    <dependencies>
        <dependency>
            <groupId>ddf.catalog.core</groupId>
            <artifactId>catalog-core-api-impl</artifactId>
        </dependency>
        
        <dependency>
            <groupId>ddf.platform</groupId>
            <artifactId>platform-configuration</artifactId>
            <version>${ddf.platform.app.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-frontend-jaxrs</artifactId>
        </dependency>

        <dependency>
            <groupId>org.codice.ddf.spatial</groupId>
            <artifactId>spatial-wfs-v1_0_0-schema-bindings</artifactId>
        </dependency>

        <dependency>
            <groupId>org.codice.ddf.spatial</groupId>
            <artifactId>spatial-wfs-v1_0_0-schema-webapp</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.codice.ddf.spatial</groupId>
            <artifactId>spatial-wfs-common</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.codice.ddf.spatial</groupId>
            <artifactId>spatial-wfs-v1_0_0-common</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.codice.ddf.spatial</groupId>
            <artifactId>spatial-ogc-common</artifactId>
        </dependency>

        <dependency>
            <groupId>org.geotools</groupId>
            <artifactId>gt-xml</artifactId>
        </dependency>

        <dependency>
            <groupId>org.codice.ddf.spatial</groupId>
            <artifactId>spatial-wfs-converter</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.codice.ddf.spatial</groupId>
            <artifactId>spatial-wfs-v1_0_0-converter</artifactId>
        </dependency>

        <dependency>
            <groupId>ddf.catalog.core</groupId>
            <artifactId>filter-proxy</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>xmlunit</groupId>
            <artifactId>xmlunit</artifactId>
            <version>1.4</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package />
                        <Embed-Dependency>
                            spatial-ogc-common;scope=compile|runtime,
                            spatial-wfs-v1_0_0-schema-bindings;scope=compile|runtime,
                            spatial-wfs-common;scope=compile|runtime,
                            spatial-wfs-v1_0_0-common;scope=compile|runtime,
                            spatial-wfs-converter;scope=compile|runtime,
                            spatial-wfs-v1_0_0-converter;scope=compile|runtime,
                            catalog-core-api-impl;scope=compile|runtime
                         </Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
