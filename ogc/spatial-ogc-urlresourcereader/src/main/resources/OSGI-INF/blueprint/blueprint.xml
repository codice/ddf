<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">

  <bean id="urlReader" class="org.codice.ddf.spatial.ogc.catalog.resource.impl.OgcUrlResourceReader">
      <cm:managed-properties
			persistent-id="org.codice.ddf.spatial.ogc.catalog.resource.impl.OgcUrlResourceReader"
			update-strategy="container-managed"/>
      <argument ref="mimeTypeMapper"/>
  </bean>
  
  <reference id="mimeTypeMapper" interface="ddf.mime.MimeTypeMapper" />

    <!--
    Ranking 3 places it ahead of DDF URL Resource Reader so that this has
    priority
    -->
  <service ref="urlReader" interface="ddf.catalog.resource.ResourceReader" ranking="3">
    <service-properties>
      <entry key="shortname" value="OgcUrlResourceReader" />
      <entry key="organization" value="OGC" />
    </service-properties>
  </service>
  
</blueprint>