<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

	<OCD name="Spatial KML Endpoint"
		id="org.codice.ddf.spatial.kml.endpoint.KmlEndpoint">
		<AD
			description="KML Document containing custom styling. This will be served up by the KmlEndpoint. (eg. file:///path/to/kml/style/doc.kml)"
			name="Style Document" id="styleUrl" required="false" type="String"
			default="" />
		<AD
			description="Location of icons for the KML endpoint"
			name="Icons Location" id="iconLoc" required="false" type="String"
			default="" />
			
		<AD
			description="Description of this NetworkLink. Enter a short description of what this NetworkLink provides."
			name="Description" id="description" required="false" type="String"
			default="" />
			
		<AD
			description="Check if the source NetworkLinks should be visible by default."
			name="Visible By Default" id="visibleByDefault" required="false" type="Boolean"
			default="false" />
			
		<AD
			description="The maximum number of results that should be returned from each layer."
			name="Max Number of Results" id="maxResults" required="false" type="Integer"
			default="100" />
	</OCD>

	<Designate
		pid="org.codice.ddf.spatial.kml.endpoint.KmlEndpoint">
		<Object
			ocdref="org.codice.ddf.spatial.kml.endpoint.KmlEndpoint" />
	</Designate>

</metatype:MetaData>