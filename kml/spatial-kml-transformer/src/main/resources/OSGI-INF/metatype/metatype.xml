<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

	<OCD name="Spatial KML Style Map Entry" id="org.codice.ddf.spatial.kml.style">

		<AD name="Attribute Name" id="attributeName" required="true" type="String" 
			description="The name of the Metacard Attribute to match against. e.g. title, metadata-content-type, etc"/>

		<AD name="Attribute Value" id="attributeValue" required="true" type="String" 
			description="The value of the Metacard Attribute."/>
		
		<AD name="Style URL" id="styleUrl" required="true" type="String" 
			description="The full qualified URL to the KML Style. e.g. http://example.com/styles#myStyle"/>

	</OCD>

	<Designate pid="org.codice.ddf.spatial.kml.style" factoryPid="org.codice.ddf.spatial.kml.style">
		<Object ocdref="org.codice.ddf.spatial.kml.style" />
	</Designate>

</metatype:MetaData>