<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>npm</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>${project.basedir}/pom.xml</exclude>
                <exclude>${project.basedir}/src/**</exclude>
                <exclude>${project.basedir}/node/**</exclude>
                <exclude>${project.basedir}/node_modules/**</exclude>
                <exclude>${project.basedir}/etc/**</exclude>
                <exclude>${project.basedir}/target/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>