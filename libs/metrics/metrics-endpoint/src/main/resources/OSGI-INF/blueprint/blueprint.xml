<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
           http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">


    <reference id="meterRegistryService" interface="org.codice.ddf.lib.metrics.registry.MeterRegistryService"/>

    <bean id="metricsEndpoint" class="org.codice.ddf.lib.metrics.endpoint.MetricsEndpoint">
        <argument ref="meterRegistryService"/>
    </bean>

    <jaxrs:server id="metricsService" address="/metrics">
        <jaxrs:serviceBeans>
            <ref component-id="metricsEndpoint"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

</blueprint>
