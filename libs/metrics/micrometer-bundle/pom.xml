<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>metrics</artifactId>
        <groupId>org.codice.ddf.lib</groupId>
        <version>2.18.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.codice.ddf.lib.metrics</groupId>
    <artifactId>micrometer-bundle</artifactId>
    <packaging>bundle</packaging>

    <dependencies>
        <dependency>
            <groupId>io.micrometer</groupId>
            <artifactId>micrometer-core</artifactId>
            <version>${micrometer.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.google.code.findbugs</groupId>
                    <artifactId>jsr305</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>io.dropwizard.metrics</groupId>
                    <artifactId>metrics-core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.google.guava</groupId>
                    <artifactId>guava</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.github.ben-manes.caffeine</groupId>
                    <artifactId>caffeine</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>net.sf.ehcache</groupId>
                    <artifactId>ehcache</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.hazelcast</groupId>
                    <artifactId>hazelcast</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.hibernate</groupId>
                    <artifactId>hibernate-entitymanager</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.eclipse.jetty</groupId>
                    <artifactId>jetty-server</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.tomcat.embed</groupId>
                    <artifactId>tomcat-embed-core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.httpcomponents</groupId>
                    <artifactId>httpclient</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.netflix.hystrix</groupId>
                    <artifactId>hystrix=core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>ch.qos.logback</groupId>
                    <artifactId>logback-classic</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.logging.log4j</groupId>
                    <artifactId>log4j-core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>io.projectreactor</groupId>
                    <artifactId>reactor-core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>io.projectreactor.netty</groupId>
                    <artifactId>reactor-netty</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.aspectj</groupId>
                    <artifactId>aspectjweaver</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.squareup.okhttp3</groupId>
                    <artifactId>okhttp</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.mongodb</groupId>
                    <artifactId>mongo-java-driver</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Embed-Dependency>
                            micrometer-core;inline=true
                        </Embed-Dependency>
                        <Export-Package>
                            io.micrometer.core;version=${micrometer.version},
                            io.micrometer.core.annotation;version=${micrometer.version},
                            io.micrometer.core.aop;version=${micrometer.version},
                            io.micrometer.core.instrument;version=${micrometer.version},
                            io.micrometer.core.instrument.binder;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.cache;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.db;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.hystrix;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.jetty;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.jpa;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.jvm;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.kafka;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.logging;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.okhttp3;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.system;version=${micrometer.version},
                            io.micrometer.core.instrument.binder.tomcat;version=${micrometer.version},
                            io.micrometer.core.instrument.composite;version=${micrometer.version},
                            io.micrometer.core.instrument.config;version=${micrometer.version},
                            io.micrometer.core.instrument.cumulative;version=${micrometer.version},
                            io.micrometer.core.instrument.distribution;version=${micrometer.version},
                            io.micrometer.core.instrument.distribution.pause;version=${micrometer.version},
                            io.micrometer.core.instrument.dropwizard;version=${micrometer.version},
                            io.micrometer.core.instrument.internal;version=${micrometer.version},
                            io.micrometer.core.instrument.logging;version=${micrometer.version},
                            io.micrometer.core.instrument.noop;version=${micrometer.version},
                            io.micrometer.core.instrument.push;version=${micrometer.version},
                            io.micrometer.core.instrument.search;version=${micrometer.version},
                            io.micrometer.core.instrument.simple;version=${micrometer.version},
                            io.micrometer.core.instrument.step;version=${micrometer.version},
                            io.micrometer.core.instrument.util;version=${micrometer.version},
                            io.micrometer.core.ipc.http;version=${micrometer.version},
                            io.micrometer.core.lang;version=${micrometer.version},
                            io.micrometer.shaded.org.pcollections;version=${micrometer.version}
                        </Export-Package>
                        <Import-Package>
                            !ch.qos.logback.classic.*,
                            !ch.qos.logback.core.*,
                            !com.sun.management,
                            !groovy.lang,
                            !com.github.benmanes.caffeine.*,
                            !com.netflix.hystrix.*,
                            !io.netty.*,
                            !io.prometheus.client.*,
                            !javax.*,
                            !okhttp3.*,
                            !org.HdrHistogram,
                            !org.LatencyUtils,
                            !org.apache.catalina,
                            !org.aspectj.*,
                            !org.hibernate.*,
                            !org.reactivestreams,
                            !reactor.*,
                            !rx.*,
                            !com.hazelcast.*,
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>