<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <!-- ProcessingPostIngestPlugin -->
    <bean id="processingPostIngestPlugin"
          class="org.codice.ddf.catalog.async.processingplugin.ProcessingPostIngestPlugin">
        <argument ref="catalogFramework"/>
        <argument ref="processingFramework"/>
    </bean>

    <!-- ProcessingFramework -->
    <reference id="processingFramework"
               interface="org.codice.ddf.catalog.async.processingframework.api.internal.ProcessingFramework"/>

    <!-- CatalogFramework -->
    <reference id="catalogFramework" interface="ddf.catalog.CatalogFramework"/>

    <service ref="processingPostIngestPlugin" interface="ddf.catalog.plugin.PostIngestPlugin"/>
</blueprint>
