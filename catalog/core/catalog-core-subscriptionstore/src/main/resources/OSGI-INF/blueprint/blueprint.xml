<blueprint
        xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="persistentStore" interface="org.codice.ddf.persistence.PersistentStore"/>

    <bean id="subscriptionStore" class="org.codice.ddf.catalog.subscriptionstore.SubscriptionStore">
        <argument ref="persistentStore"/>
    </bean>

    <bean id="subscriptionCache" class="org.codice.ddf.catalog.subscriptionstore.SubscriptionCache">
        <argument ref="subscriptionStore"/>
    </bean>

    <service ref="subscriptionCache"
             interface="org.codice.ddf.catalog.subscriptionstore.internal.SubscriptionContainer"/>

</blueprint>