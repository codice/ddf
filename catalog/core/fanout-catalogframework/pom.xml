<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>core</artifactId>
		<groupId>ddf.catalog.core</groupId>
		<version>2.3.0-SNAPSHOT</version>
	</parent>
	
	<artifactId>fanout-catalogframework</artifactId>
	<name>DDF :: Catalog :: Core :: FanoutCatalogFramework</name>
	<packaging>bundle</packaging>

	<dependencies>
		<dependency>
			<groupId>ddf.catalog.core</groupId>
			<artifactId>catalog-core-api</artifactId>
		</dependency>
		<dependency>
            <groupId>ddf.catalog.core</groupId>
            <artifactId>catalog-core-commons</artifactId>
		</dependency>
		<dependency>
			<groupId>ddf.catalog.core</groupId>
			<artifactId>ddf-pubsub</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.compendium</artifactId>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
		
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId};blueprint.graceperiod:=true;blueprint.timeout:=604800000</Bundle-SymbolicName>
						<Import-Package>
							ddf.catalog,
							ddf.catalog.util,
							ddf.catalog.federation,
							ddf.catalog.federation.impl,
							ddf.catalog.pubsub,
							ddf.catalog.pubsub.tracker,
							org.osgi.service.blueprint,
							org.osgi.service.cm,
							org.osgi.framework,
							org.apache.log4j;provider=paxlogging;version="[1.2,1.3)",*
                        </Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
