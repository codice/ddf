<ruleSet>
    <!--Every validatorRuleSet must have a validatorName.-->
    <validatorRuleSet validatorName="Schema">
        <!-- Every validatorRuleSet must EITHER have anyWeight, one of errorWeight or warningWeight,
         or one or more individualRules -->
        <anyWeight>15</anyWeight>
    </validatorRuleSet>
    <validatorRuleSet validatorName="ValidatorWithErrorAndWarningWeight">
        <errorWeight>15</errorWeight>
        <warningWeight>5</warningWeight>
    </validatorRuleSet>
    <validatorRuleSet validatorName="ValidatorWithIndividualRuleWeight">
        <individualRule message="warn1">
            <weight>2</weight>
        </individualRule>
        <individualRule message="warn2">
            <weight>0</weight>
        </individualRule>
        <individualRule message="warn3">
            <weight>3</weight>
        </individualRule>
    </validatorRuleSet>
</ruleSet>