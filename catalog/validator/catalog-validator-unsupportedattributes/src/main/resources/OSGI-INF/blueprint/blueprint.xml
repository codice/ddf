<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="filterAdapter" interface="ddf.catalog.filter.FilterAdapter"/>

  <bean id="attributeExtractor" class="org.codice.ddf.validator.query.unsupportedattributes.AttributeExtractor">
    <argument ref="filterAdapter"/>
  </bean>

  <reference-list id="attributeRestrictions" interface="ddf.catalog.source.SourceAttributeRestriction"
    availability="optional">
    <reference-listener bind-method="bindPlugin" unbind-method="unbindPlugin">
      <bean class="org.codice.ddf.platform.util.SortedServiceList"/>
    </reference-listener>
  </reference-list>

  <service interface="ddf.catalog.validation.QueryValidator">
    <bean class="org.codice.ddf.validator.query.unsupportedattributes.UnsupportedAttributeQueryValidator">
      <argument ref="attributeExtractor"/>
      <property name="sourceAttributeRestrictions" ref="attributeRestrictions"/>
    </bean>
  </service>

</blueprint>