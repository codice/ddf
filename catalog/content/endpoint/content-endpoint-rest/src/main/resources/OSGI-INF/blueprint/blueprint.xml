<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

    <reference id="contentFramework" interface="ddf.content.ContentFramework"/>

    <reference id="mimeTypeMapper" interface="ddf.mime.MimeTypeMapper"/>

    <jaxrs:server id="restService" address="/content">
        <jaxrs:serviceBeans>
            <ref component-id="restSvc"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <bean id="restSvc" class="ddf.content.endpoint.rest.ContentEndpoint">
        <argument ref="contentFramework"/>
        <argument ref="mimeTypeMapper"/>
    </bean>

</blueprint>