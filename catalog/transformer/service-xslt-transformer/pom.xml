<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>transformer</artifactId>
    <groupId>ddf.catalog.transformer</groupId>
    <version>2.2.0.RC5</version>
  </parent>
  
  <artifactId>service-xslt-transformer</artifactId>
  <packaging>bundle</packaging>
  <name>DDF :: Catalog :: Transformer :: XSLT</name>

  <dependencies>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>
    <dependency>
      <groupId>ddf.catalog.core</groupId>
      <artifactId>catalog-core-api</artifactId>
    </dependency>
    <dependency>
      <groupId>ddf.catalog.core</groupId>
      <artifactId>catalog-core-commons</artifactId>
    </dependency>
    <dependency>
      <groupId>net.sf.saxon</groupId>
      <artifactId>saxon</artifactId>
    </dependency>
    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
    </dependency>
    <dependency>
      <groupId>org.ops4j.pax.swissbox</groupId>
      <artifactId>pax-swissbox-extender</artifactId>
      <version>1.3.1</version>
    </dependency>
    <dependency>
	  <groupId>commons-codec</groupId>
	  <artifactId>commons-codec</artifactId>
	</dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Import-Package>
			  ddf.catalog.data, ddf.catalog.operation, ddf.catalog.transform, ddf.util,
			  javax.activation,
              javax.xml.parsers,
              javax.security.auth,
              javax.xml.transform,
              javax.xml.transform.dom,
              javax.xml.transform.stream, net.sf.saxon,
              org.apache.commons.codec.binary,
              org.joda.time.format, org.w3c.dom,
              org.osgi.framework,
              org.osgi.service.blueprint,
              org.w3c.dom.ls,
              org.apache.commons.io,
              org.ops4j.pax.swissbox.extender;version="[1.3.1,2.0)",
              org.apache.log4j;version="[1.2,1.3)";
              provider=paxlogging;mandatory:=provider
            </Import-Package>
            <Export-Package />
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>