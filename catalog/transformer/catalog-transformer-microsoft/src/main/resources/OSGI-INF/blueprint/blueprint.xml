<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="microsoftTransformer" class="ddf.catalog.transformer.input.MicrosoftInputTransformer">
        <property name="tikaInputTransformer" ref="tikaInputTransformer"/>
        <property name="clavinMetacardEnricher" ref="clavinMetacardEnricher"/>
    </bean>

    <service ref="microsoftTransformer" interface="ddf.catalog.transform.InputTransformer">
        <service-properties>
            <entry key="id" value="microsoft"/>
            <!-- shortname only exists for backwards compatibility -->
            <entry key="shortname" value="microsoft"/>
            <entry key="description"
                   value="Detects and extracts metadata microsoft word documents."/>
            <entry key="mime-type">
                <list>
                    <value>application/msword</value>
                    <value>application/vnd.ms-excel</value>
                    <value>application/vnd.ms-powerpoint</value>
                </list>
            </entry>
        </service-properties>
    </service>

    <reference id="tikaInputTransformer" interface="ddf.catalog.transform.InputTransformer"
               filter="(id=tika)"
               availability="mandatory"/>

    <reference id="clavinMetacardEnricher" interface="ddf.catalog.transform.MetacardEnricher"
               filter="(id=clavinMetacardEnricher)"
               availability="mandatory"/>

</blueprint>