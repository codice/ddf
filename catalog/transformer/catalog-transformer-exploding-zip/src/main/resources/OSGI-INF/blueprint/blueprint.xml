<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
               http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="mimeMapper" interface="ddf.mime.MimeTypeMapper"/>

    <reference id="transform" interface="org.codice.ddf.catalog.transform.Transform"/>

    <bean id="explodingZipTransformer" class="org.codice.ddf.catalog.transformer.explodingzip.ExplodingZipTransformer">
        <argument value="explode-zip"/>
        <argument>
            <list>
                <value>application/zip</value>
            </list>
        </argument>
        <argument ref="transform"/>
        <argument ref="mimeMapper"/>
    </bean>

    <service interface="org.codice.ddf.catalog.transform.MultiInputTransformer" ref="explodingZipTransformer" ranking="20">
        <service-properties>
            <entry key="id" value="explode-zip"/>
        </service-properties>
    </service>

</blueprint>
