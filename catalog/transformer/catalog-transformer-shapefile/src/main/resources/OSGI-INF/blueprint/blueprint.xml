<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

	<bean id="shapeFileMetacardType" class="ddf.catalog.data.impl.MetacardTypeImpl">
		<argument value="shapefile" />
		<argument>
			<list>
				<bean class="ddf.catalog.transformer.shape.file.transformer.api.ShapeFileAttributes" />
				<bean class="ddf.catalog.data.impl.types.TopicAttributes" />
			</list>
		</argument>
	</bean>

	<service ref="shapeFileMetacardType" interface="ddf.catalog.data.MetacardType">
		<service-properties>
			<entry key="name" value="shapefile" />
		</service-properties>
	</service>

    <reference id="shapefileReaderFactory" interface="ddf.catalog.transformer.shape.file.reader.api.ShapeFileReaderFactory" />
               
	<bean id="shapeFileTransformer"
		class="ddf.catalog.transformer.shape.file.transformer.ShapeFileInputTransformer">
		<argument ref="shapefileReaderFactory"/>
 		<cm:managed-properties
			persistent-id="ddf.catalog.transformer.shape.file.transformer.ShapeFileInputTransformer"
			update-strategy="container-managed" />

		<argument ref="shapeFileMetacardType" />
	</bean>

	<service ref="shapeFileTransformer" interface="ddf.catalog.transform.InputTransformer">
		<service-properties>
			<entry key="id" value="shapefile" />
			<entry key="mime-type">
				<list>
					<value>application/x-shapefile</value>
					<value>application/x-qgis</value>
				</list>
			</entry>
		</service-properties>
	</service>

</blueprint>