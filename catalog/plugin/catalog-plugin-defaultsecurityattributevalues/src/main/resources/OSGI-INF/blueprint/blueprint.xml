<blueprint xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="defaultMarkingsPlugin"
          class="ddf.catalog.metacard.security.DefaultSecurityAttributeValuesPlugin">
        <cm:managed-properties persistent-id="ddf.catalog.metacard.security.defaultsecurityattributevaluesplugin"
                               update-strategy="container-managed"/>
        <property name="metacardMarkingMappings">
            <list>
                <value>http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress=point-of-contact</value>
            </list>
        </property>
    </bean>

    <service ranking="99" ref="defaultMarkingsPlugin" interface="ddf.catalog.plugin.DefaultMetacardAttributePlugin"/>

</blueprint>