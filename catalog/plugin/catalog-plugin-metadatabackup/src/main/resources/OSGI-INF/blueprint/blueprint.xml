<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

<!--    <reference id="metadataTransformer" interface="ddf.catalog.transform.MetacardTransformer" filter="(id=metadata)"/>-->

    <cm:managed-service-factory
            id="metadataBackup"
            factory-pid="org.codice.ddf.catalog.plugin.metadata.backup.MetadataBackupPlugin"
            interface="org.codice.ddf.catalog.async.plugin.api.internal.PostProcessPlugin">
        <service-properties>
            <cm:cm-properties persistent-id="org.codice.ddf.catalog.plugin.metadata.backup.MetadataBackupPlugin" />
        </service-properties>
        <cm:managed-component class="org.codice.ddf.catalog.plugin.metadata.backup.MetadataBackupPlugin">
            <cm:managed-properties persistent-id="" update-strategy="component-managed"
                                   update-method="refresh"/>
            <property name="metacardTransformerId" value="metadata"/>
            <property name="outputDirectory" value="data/backup/metadata"/>
            <property name="folderDepth" value="0"/>
            <property name="keepDeletedMetacards" value="false"/>
        </cm:managed-component>
    </cm:managed-service-factory>

</blueprint>