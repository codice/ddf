<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
               http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <bean id="clavinWrapper" class="org.codice.ddf.catalog.content.plugin.clavin.ClavinWrapper">
        <cm:managed-properties persistent-id="org.codice.ddf.catalog.content.plugin.clavin.index"
                               update-strategy="container-managed"/>
        <property name="indexLocation" value="data/clavin-index"/>
    </bean>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="geocoding/createClavinIndex">
            <action class="org.codice.ddf.catalog.content.plugin.clavin.ClavinCommand">
                <property name="clavinWrapper" ref="clavinWrapper"/>
            </action>
        </command>
    </command-bundle>

    <bean id="clavinPlugin" class="org.codice.ddf.catalog.content.plugin.clavin.ClavinPlugin">
        <property name="clavinWrapper" ref="clavinWrapper"/>
    </bean>

    <service ref="clavinPlugin" auto-export="interfaces"/>

</blueprint>
