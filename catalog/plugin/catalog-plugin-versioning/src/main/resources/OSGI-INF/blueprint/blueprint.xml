<blueprint xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

    <reference id="catalogProvider" interface="ddf.catalog.source.CatalogProvider" />

    <reference id="catalogFramework" interface="ddf.catalog.CatalogFramework" />

    <bean id="historian" class="ddf.catalog.metacard.versioning.HistorianPlugin">
        <argument ref="catalogFramework" />
    </bean>

    <service ref="historian" interface="ddf.catalog.plugin.PostIngestPlugin" />

    <bean id="bouncerPlugin" class="ddf.catalog.metacard.versioning.HistorianBouncerPolicyPlugin" />

    <service ref="bouncerPlugin" interface="ddf.catalog.plugin.PolicyPlugin" />

</blueprint>
