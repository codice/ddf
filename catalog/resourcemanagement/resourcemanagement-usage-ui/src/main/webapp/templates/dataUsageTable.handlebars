    <thead>
        <tr>
            <th>User</th>
            <th>Data Used</th>
            <th>Data Remaining</th>
            <th>Data Limit</th>
        </tr>
    </thead>
    <tbody class="usertabledata">
    {{#each users}}
        <tr>
            <td name="user">{{user}}</td>
            <td>{{usagePercent}}% ({{usage}})
            {{#if notify}}
                <span class="limit-warning">
                <i class="fa fa-exclamation-triangle"></i>
                Limit Reached </span>
            {{/if}}
            </td>
            <td>{{usageRemaining}}</td>
            <td class="data-limit-td">
                <input name="{{user}}"
                       type="number"
                       min="0"
                       max="1000"
                       step="1"
                       value={{displayLimit}}>
                <select name="dataSize">
                    {{#select displaySize}}
                     <option value="MB">MB</option>
                     <option value="GB">GB</option>
                     {{/select}}
                </select>
            </td>
        </tr>
    {{/each}}

    </tbody>