<div class="result-container" data-metacard-id="{{id}}" data-index="{{index}}"
     data-query-id="{{metacard.queryId}}">
    <div class="result-indicator">
    </div>
    <div class="result-details">
        {{#if metacard.properties.thumbnail}}
        <div class="detail-thumbnail details-property">
                <img src="{{metacard.properties.thumbnail}}">
        </div>
        {{/if}}
        <div class="detail-title details-property">
            <span>
                {{metacard.properties.title}}
            </span>
        </div>
        <div class="detail-source details-property">
            {{#if local}}
                <span class="fa fa-home">
                </span>
            {{else}}
                <span class="fa fa-cloud">
                </span>
                <span>
                    {{metacard.properties.source-id}}
                </span>
            {{/if}}
        </div>
        <div class="detail-lastModified details-property">
            <span>
                {{niceDiff}}
            </span>
        </div>
        {{#each customDetail}}
            <div class="detail-custom details-property">
                <span>
                {{this}}
                </span>
            </div>
        {{/each}}
    </div>
    <div class="result-validation">
        {{#if hasError}}
            <span class="fa fa-exclamation-triangle resultError">
            </span>
        {{else if hasWarning}}
            <span class="fa fa-exclamation-triangle resultWarning">
            </span>
        {{/if}}
    </div>
    <div class="result-save fa fa-star-o is-button" data-help="Adds the
    result to your saved items.">
    </div>
    <div class="result-unsave fa fa-star is-button" data-help="Removes the
    result from your saved items.">
    </div>
    <div class="result-actions is-button" data-help="Provides a list
    of actions to take on the result.">

    </div>
</div>