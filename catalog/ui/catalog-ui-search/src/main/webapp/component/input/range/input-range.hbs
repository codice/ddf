 <div class="if-editing">
    <input id="{{cid}}" type="number" value="{{value}}" placeholder="{{property.placeholder}}" name="{{property.id}}"
           {{#if property.min}} min="{{property.min}}" {{/if}}
           {{#if property.max}} max="{{property.max}}" {{/if}}>
    <div class="units">
        <span class="units-value">{{value}}</span><span class="units-label">{{property.units}}</span>
    </div>
    <input id="{{cid}}" type="range" value="{{value}}" placeholder="{{property.placeholder}}" name="{{property.id}}"
           {{#if property.min}} min="{{property.min}}" {{/if}}
           {{#if property.max}} max="{{property.max}}" {{/if}}>
 </div>
 <div class="if-viewing">
    <label>
        {{value}}
    </label>
 </div>