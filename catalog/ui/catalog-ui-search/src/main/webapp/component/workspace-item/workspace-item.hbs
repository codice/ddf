<div class="choice as-grid" data-workspaceId="{{id}}">
    <div class="choice-preview">
        {{#if previewImage}}
            <img src="/services/catalog/sources/ddf.distribution/{{previewImage}}?transform=resource">
        {{/if}}
    </div>
    <div class="choice-footer">
        <div class="choice-details">
            <div class="choice-title" data-help="The title of the workspace.">
                {{title}}
            </div>
            <div class="choice-date" data-help="The date the workspace was last modified.">
                {{niceDate}}
            </div>
        </div>
        <div class="choice-actions is-button">
        </div>
    </div>
</div>
<div class="choice as-list" data-workspaceId="{{id}}">
    <div class="choice-details">
        <div class="choice-title" data-help="The title of the workspace.">
            {{title}}
        </div>
        <div class="choice-date" data-help="The date the workspace was last modified">
            {{niceDate}}
        </div>
    </div>
    <div class="choice-actions is-button">
    </div>
</div>
