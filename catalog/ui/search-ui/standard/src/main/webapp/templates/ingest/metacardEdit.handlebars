<form role="form">
    <span class="error-text"></span>
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" id="title" name="title">
    </div>
    <div class="form-group">
        <label for="effective">Effective Time</label>
        <input class="form-control" id="effective-time-ingest" name="effective">
    </div>
    <div class="form-group">
        <label for="metadata-content-type">Content Type</label>
        <input class="form-control" id="metadata-content-type" name="metadata-content-type">
    </div>
    <div class="form-group">
        <label for="thumbnail">Thumbnail</label>
        <span class="btn btn-default thumbinput-button">
            <span>Upload new thumbnail</span>
            <input type="file" name="thumbFile">
        </span>
        <img class='thumbnail' alt='{{properties.title}}' src='data:image/jpeg;charset=utf-8;base64, {{properties.thumbnail}}' />
    </div>
    <div class="form-actions btn-group">
        <a href="#" class="btn btn-default save-metacard">Save Changes</a>
        <a href="#" class="btn btn-default cancel-metacard">No Change</a>
        <a href="#" class="btn btn-default delete-metacard">Delete Metacard</a>
    </div>
</form>