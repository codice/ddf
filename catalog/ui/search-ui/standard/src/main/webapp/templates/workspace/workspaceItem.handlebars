 {{#is editing false}}
    <td>
        <span class="workspace-name">{{name}}</span>
    </td>
    <td>
        <span class="workspace-count">{{hits}}&nbsp;{{#is working true}}<i class="fa fa-circle-o-notch fa-spin"></i>{{/is}}</span>
    </td>
{{/is}}

{{#is editing true}}
    <td>
        <div class="col-lg-6 form-group">
            <div class="input-group input-group-sm margin-no">
                <input type="text" id="name" class="form-control" placeholder="{{name}}" autofocus>
            </div>
        </div>
    </td>
    <td>
        <a href="#" class="fa fa-times workspace-link workspace-remove"></a>
    </td>
{{/is}}


