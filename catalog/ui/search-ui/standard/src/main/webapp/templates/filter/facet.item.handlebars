<h6>
    {{splitDashes fieldName}}
</h6>

<table class="table table-striped resultTable vertical-shrink-rows no-margin-bottom facet-values">
    <tbody>
    {{#each values}}
        <tr>
            <td>
                <div class="pull-left margin-right-6">
                    <input class="toggle-facet" type="checkbox" {{#is isInFilter true}}
                        checked="checked" {{/is}} {{#is ../state "any"}} checked="checked" {{/is}} data-field-value="{{value}}" data-value-count="{{count}}" data-field-name="{{../fieldName}}"/>
                </div>

                <div class="pull-left" title="{{value}}">
                    {{#is value "no-value"}}
                        (no value)
                    {{else}}
                        {{value}}
                    {{/is}}
                </div>
                <div class="field-value pull-right margin-left-3" data-field-value="{{value}}" data-value-count="{{count}}" data-field-name="{{../fieldName}}">{{count}}</div>
            </td>
        </tr>
    {{/each}}
    {{#is values.length 0}}
        <tr>
            <td class="text-center">
                <div class="pull-right">No Matches</div>
            </td>
        </tr>
    {{/is}}
    </tbody>
</table>
