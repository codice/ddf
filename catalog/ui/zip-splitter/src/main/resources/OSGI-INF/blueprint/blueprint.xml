<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="zipSplitter" class="org.codice.ddf.catalog.ui.metacard.impl.ZipSplitter">
        <argument value="zip-splitter"/>
        <argument>
            <set>
                <value>application/zip</value>
                <value>application/octet-stream</value>
            </set>
        </argument>
    </bean>

    <service ref="zipSplitter" interface="org.codice.ddf.catalog.ui.metacard.internal.Splitter">
        <service-properties>
            <entry key="id" value="zip-splitter"/>
        </service-properties>
    </service>

</blueprint>
