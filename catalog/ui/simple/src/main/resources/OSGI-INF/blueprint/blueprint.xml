<blueprint xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="brandingRegistry" interface="org.codice.ddf.branding.BrandingRegistry" />
    <reference id="configurationAdmin" interface="org.osgi.service.cm.ConfigurationAdmin"/>

    <bean id="uiConfigurationPropertiesFactory"
          class="org.codice.ddf.ui.searchui.simple.properties.UiConfigurationPropertiesFactory"
          factory-method="getInstance">
        <cm:managed-properties persistent-id="org.codice.ddf.ui.search.simple.properties"
                               update-strategy="container-managed"/>
        <property name="branding" ref="brandingRegistry"/>
        <property name="configurationAdmin" ref="configurationAdmin"/>
    </bean>

    <reference id="catalogFramework" interface="ddf.catalog.CatalogFramework"/>
    <reference id="filterBuilder" interface="ddf.catalog.filter.FilterBuilder"/>

    <bean id="catalog"
          class="org.codice.ddf.ui.searchui.simple.Catalog">
        <argument ref="catalogFramework"/>
        <argument ref="filterBuilder"/>
    </bean>

    <bean id="search" class="org.codice.ddf.ui.searchui.Search">
        <argument ref="catalog"/>
    </bean>

    <service interface="javax.servlet.Servlet" ref="search">
        <service-properties>
            <entry key="osgi.http.whiteboard.servlet.name" value="search-ui"/>
            <entry key="osgi.http.whiteboard.servlet.pattern" value=""/>
            <entry key="osgi.http.whiteboard.servlet.asyncSupported" value="true"/>
            <entry key="osgi.http.whiteboard.resource.pattern" value="/static/*"/>
            <entry key="osgi.http.whiteboard.resource.prefix" value="/static"/>
        </service-properties>
    </service>

</blueprint>