 <div class="rearrange-columns">
{{#each this}}
    <div class="column {{#if hidden}}is-hidden-column{{/if}} {{#if notCurrentlyAvailable}}is-unavailable-column{{/if}}" data-propertyid="{{id}}" data-propertytext="{{label}}{{#unless label}}{{id}}{{/unless}}">
        <span class="column-text">
        {{label}}
        {{#unless label}}
            {{id}}
        {{/unless}}
        </span>
    </div>
{{/each}}
</div>
<div class="rearrange-footer">
    <button class="footer-cancel is-negative">
        <span class="fa fa-times"></span>
        <span>Cancel</span>
    </button>
    <button class="footer-save is-positive">
        <span class="fa fa-floppy-o"></span>
        <span>Save</span>
    </button>
</div>

