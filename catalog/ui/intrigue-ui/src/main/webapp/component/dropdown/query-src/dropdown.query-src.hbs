<div>
    <div class="dropdown-label">
        Sources:
    </div>
    <div class="dropdown-text">
        {{#each this}}
            <div class="text-src {{#if this.available}}is-available{{/if}}">
                {{#unless available}}
                    <span class="fa fa-exclamation-triangle src-availability">

                    </span>
                {{/unless}}
                <span class="src-title">
                    {{this.id}}
                </span>
            </div>
        {{/each}}
        {{#unless this}}
            <span class="text-src is-available">
                Click here to select sources
            </span>
        {{/unless}}
    </div>
    <span class="dropdown-icon fa fa-caret-down">
    </span>
</div>