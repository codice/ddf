{{#each this}}
    <div class="choice {{#if available}}is-available{{/if}}" data-value="{{id}}">
        {{#unless available}}
            <span class="fa fa-exclamation-triangle">

            </span>
        {{/unless}}
        <span class="choice-text">
            {{id}}
        </span>
        <span class="choice-selected fa fa-check">

        </span>
    </div>
{{/each}}