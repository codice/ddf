<div class="result-container" data-metacard-id="{{id}}" data-index="{{index}}"
     data-query-id="{{metacard.queryId}}">
    <div class="result-indicator" data-help="Signifies which searches this result has been found in.">
    </div>
    <div class="result-type" data-help="Indicates the type of result 
    (workspace, resource, history, deleted)">
        <span class="fa fa-history"></span>
        <span class="fa fa-book"></span>
        <span class="fa fa-file"></span>
        <span class="fa fa-trash"></span>
    </div>
    <div class="result-details">
        <div class="detail-title details-property is-bold" data-help="{{getAlias 'title'}}">
            <span>
                {{metacard.properties.title}}
            </span>
        </div>
        {{#if metacard.properties.thumbnail}}
        <div class="detail-thumbnail details-property" data-help="{{getAlias 'thumbnail'}}">
                <img src="{{getImageSrc metacard.properties.thumbnail}}">
        </div>
        {{/if}}
        <div class="detail-lastModified details-property" data-help="{{getAlias 'modified'}}">
            <span>
                {{niceDiff}}
            </span>
        </div>
        <div class="detail-source details-property" data-help="{{getAlias 'source'}}">
            {{#if local}}
                <span class="fa fa-home">
                </span>
                <span>local</span>
            {{else}}
                <span class="fa fa-cloud">
                </span>
                <span>
                    {{metacard.properties.source-id}}
                </span>
            {{/if}}
        </div>
        {{#each customDetail}}
            <div class="detail-custom details-property" data-help="{{getAlias this.label}}">
                <span>
                {{this.value}}
                </span>
            </div>
        {{/each}}
    </div>
    <div class="result-validation">
        {{#if hasError}}
            <span class="fa fa-exclamation-triangle resultError" data-help="Indicates the given result has a validation error.  
            See the 'Quality' tab of the result for more details.">
            </span>
        {{else if hasWarning}}
            <span class="fa fa-exclamation-triangle resultWarning" data-help="Indicates the given result has a validation warning.  
            See the 'Quality' tab of the result for more details.">
            </span>
        {{/if}}
    </div>
    <div class="result-save fa fa-star-o is-button" data-help="Adds the
    result to your saved items.">
    </div>
    <div class="result-unsave fa fa-star is-button" data-help="Removes the
    result from your saved items.">
    </div>
    <div class="result-actions is-button" data-help="Provides a list
    of actions to take on the result.">

    </div>
</div>