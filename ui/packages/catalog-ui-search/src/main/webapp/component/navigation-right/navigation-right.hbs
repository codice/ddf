<button class="navigation-item item-help is-button" title="Shows helpful hints in the current context.">
    <span class="fa fa-question"></span>
</button>
<button class="navigation-item item-settings is-button" title="Shows settings for the application.">
    <span class="fa fa-cog"></span>
</button>
<button class="navigation-item item-alerts is-button" title="Shows notifications.">
    <span class="fa fa-bell"></span>
    <span class="alerts-badge fa fa-exclamation"></span>
</button>
