<div class="metacard-interaction interaction-copy-coordinates" data-help="Copies the coordinates to your clipboard."
    data-clipboard-text="{{this.clickLat}} {{this.clickLon}}">
    <div class="interaction-icon fa fa-clipboard">
    </div>
    <div class="interaction-text">
        Copy Coordinates to Clipboard
        <div>
            <span>{{this.clickLat}}</span>
            <span>{{this.clickLon}}</span>
        </div>
    </div>
</div>
<div class="metacard-interaction interaction-copy-wkt" data-help="Copies the WKT of the coordinates to your clipboard."
    data-clipboard-text="POINT ({{this.clickLon}} {{this.clickLat}})">
    <div class="interaction-icon fa fa-clipboard">
    </div>
    <div class="interaction-text">
        Copy WKT Coordinates to Clipboard
        <div>
            <span>POINT ({{this.clickLon}} {{this.clickLat}})</span>
        </div>
    </div>
</div>
<div class="metacard-interaction interaction-view-histogram" data-help="Open histogram of results.">
    <div class="interaction-icon fa fa-bar-chart">
    </div>
    <div class="interaction-text">
        View Histogram
    </div>
</div>
<div class="metacard-interaction interaction-view-details" data-help="Open inspector for result.">
    <div class="interaction-icon fa fa-info">
    </div>
    <div class="interaction-text">
        View Inspector
        <div>
            <span>{{target}}</span>
        </div>
    </div>
</div>
<div class="metacard-interaction interaction-view-details-selection" data-help="Open inspector for selected results.">
    <div class="interaction-icon fa fa-info">
    </div>
    <div class="interaction-text">
        View Inspector (Current Selection)
        <div>
            <span>{{selectionCount}} selected</span>
        </div>
    </div>
</div>
<div class="metacard-interaction interaction-view-histogram-selection" data-help="Open histogram of selected results.">
    <div class="interaction-icon fa fa-bar-chart">
    </div>
    <div class="interaction-text">
        View Histogram (Current Selection)
        <div>
            <span>{{selectionCount}} selected</span>
        </div>
    </div>
</div>