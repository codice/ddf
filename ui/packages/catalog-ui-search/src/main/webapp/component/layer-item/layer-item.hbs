<button class="is-button layer-rearrange-up">
    <span class="fa fa-angle-up"></span>
</button>
<button class="is-button layer-rearrange-down">
    <span class="fa fa-angle-down"></span>
</button>
<button class="is-button layer-rearrange" tabindex="-1">
    <span class="fa fa-arrows-v"></span>
</button>
<div class="layer-properties">
    <div class="layer-name" title="{{name}}">{{name}}</div>
    <div class="layer-visibility group">
        <button class="is-button layer-show">
            <span class="fa fa-eye"></span>
            <span class="fa fa-eye-slash"></span>
        </button><!--
    --><input class="layer-alpha" value={{alpha}} min="0" max="1" step="0.01" type="range"/>
    </div>
</div>