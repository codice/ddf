{{#is type 'new-form'}}
    <div>
        <h3>New Form</h3>
        <div class="fa fa-plus-circle new-form-circle"/>
    </div>
{{/is}}
{{#is type 'basic'}}
    <div>
        <h3>Basic</h3>
    </div>

{{/is}}
{{#is type 'text'}}
    <div>
        <h3>Text</h3>
    </div>
{{/is}}
{{#is type 'custom'}}
    <div>
        <h3 class="search-form-title" data-help="{{name}}">{{name}}</h3>
        <span class="search-form-contents">
            <span class="search-form-label">Created On: </span>
            {{createdOn}}
        </span>
        <span class="search-form-contents">
            <span class="search-form-label">Created By: </span>
            {{createdBy}}
        </span>
        <span class="choice-actions is-button" title="Shows a list of actions to take on the search forms" 
        data-help="Shows a list of actions to take on the search forms.">
        </span>
    </div>
{{/is}}
{{#is type 'new-result'}}
    <div>
            <h3>New Result Form</h3>
            <div class="fa fa-plus-circle new-form-circle"/>
    </div>
{{/is}}
{{#is type 'result'}}
    <div>
        <h3 class="search-form-title" data-help="{{name}}">{{name}}</h3>
            <span class="search-form-contents">
                    <span class="search-form-label">Created On: </span>
                    {{createdOn}}
            </span>
        <span class="search-form-contents">
            <span class="search-form-label">Created By: </span>
            {{createdBy}}
        </span>
        <span class="choice-actions is-button" title="Shows a list of actions to take on the search forms" 
        data-help="Shows a list of actions to take on the search forms.">
        </span>
    </div>
{{/is}}