        <i class="fa fa-circle-o"></i>
        Bounding Box
    </label>

    <label id="locationKeyword" class="btn location {{#if hasKeyword}}active{{/if}}" data-target="#keyword{{cid}}" data-toggle="tab">
        <input type="radio" name="keywordButton">
        <i class="fa fa-circle"></i>
        <i class="fa fa-circle-o"></i>
