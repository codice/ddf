<div class="interaction interaction-run" title="Run" data-help="Executes the list search.">
    <div class="interaction-icon fa fa-play">
    </div>
    <div class="interaction-text">
        Run
    </div>
</div>
<div class="interaction interaction-stop" title="Stop" data-help="Stops a list search in the progress of executing.  If results have already returned from some sources, you won't lose them.">
    <div class="interaction-icon fa fa-stop">
    </div>
    <div class="interaction-text">
        Stop
    </div>
</div>
<div class="interaction interaction-delete" title="Delete" data-help="Deletes the list.">
    <div class="interaction-icon fa fa-minus">
    </div>
    <div class="interaction-text">
        Delete
    </div>
</div>
<div class="interaction interaction-duplicate" title="Duplicate" data-help="Create a new list based off this one.">
    <div class="interaction-icon fa fa-copy">
    </div>
    <div class="interaction-text">
        Duplicate
    </div>
</div>
{{#each actions}}
<div class="interaction interaction-action" title="{{title}}" data-help="{{description}}" data-url="{{{url}}}&listId={{../id}}">
    <div class="interaction-icon fa fa-list">
    </div>
    <div class="interaction-text">
        {{title}}
    </div>
</div>
{{/each}}
