<div class="query-container"  data-queryid="{{id}}">
    <div class="query-color" style="background: {{color}}" data-help="Color used to indicate a result came from this search.">
    </div>
    <div class="query-details">
        <div class="details-title" data-help="The name you've given to the search.">
            {{bind selector=".details-title" event="change:title" key=(path "title")}}
        </div>
        <div class="details-feed" data-help="Shows the status of the search, such as the number of results.">
        </div>
        <div class="details-footer">
            <button class="query-run is-button" title="Runs the search." data-help="Runs the search.">
                <span class="fa fa-play"></span>
            </button>
            <button class="query-stop is-button" title="Stops a search in the progress of executing.  If results have already returned from some sources, you won't lose them." data-help="Stops a search in the progress of executing.  If results have already returned from some sources, you won't lose them.">
                <span class="fa fa-stop"></span>
            </button>
            <div class="query-edit is-button" title="Edits the search criteria." data-help="Edits the search criteria.">
                <span class="fa fa-pencil"></span>
            </div>
            <div class="query-settings is-button" title="Edits the search settings, such as sorting." data-help="Edits the search settings, such as sorting.">
                <span class="fa fa-cog"></span>
            </div>
            {{!-- <button class="query-status is-button is-neutral" data-help="Edits the search.">
                <span class="fa fa-heartbeat"></span>
            </button> --}}
            <div class="query-schedule is-button" title="Allows setting up search notifications." data-help="Allows setting up search notifications.">
                <span class="fa fa-bell"></span>
            </div>
            <div class="query-actions is-button" title="Shows a list of actions to take on the search." data-help="Shows a list of actions to take on the search.">
            </div>
        </div>
    </div>
</div>