<div class="choice is-all is-available">
    <span class="choice-text">All Sources</span>
    <span class="choice-selected fa fa-check">
    </span>
</div>
{{#each this}}
    <div class="choice is-specific {{#if available}}is-available{{/if}}" data-value="{{id}}">
        <span class="choice-text">
            {{#unless available}}
                <span class="fa fa-exclamation-triangle">

                </span>
            {{/unless}}
            {{#if local}}
                <span class="fa source-icon fa-home">
                </span>
            {{else}}
                <span class="fa source-icon fa-cloud">
                </span>
            {{/if}}
            {{id}}
        </span>
    </div>
{{/each}}