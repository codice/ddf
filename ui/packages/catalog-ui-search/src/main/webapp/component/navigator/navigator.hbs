<button class="navigation-choice is-neutral choice-product is-button is-header">
    <span class="is-bold">{{properties.branding}} </span>
    <span class="">{{properties.product}}</span>
</button>
<div class="is-divider"></div>
<div class="navigation-links">
    <button class="navigation-choice is-neutral choice-workspaces is-button">
        <span class="fa fa-book"></span><span>Workspaces</span><div class="workspaces-indicator"></div>
    </button>
    <div class="workspaces-save">
    </div>
    <button class="navigation-choice is-neutral choice-upload is-button">
        <span class="fa fa-upload"></span><span>Upload</span>
    </button>
    <button class="navigation-choice is-neutral choice-sources is-button">
        <span class="fa fa-cloud"></span><span>Sources</span><span class="sources-indicator fa fa-bolt"></span>
    </button>
</div>
{{#if recent}}
    <div class="is-divider"></div>
    <div class="navigation-links recent-links">
        {{#if workspace}}
            <div class="recent-title">Most Recent Workspace</div>
            <button class="navigation-choice is-neutral choice-previous-workspace is-button" title="Most Recent Workspace: {{workspace.title}}">
                <span class="dynamic-text">{{workspace.title}}</span>
            </button>
        {{/if}}
        {{#if metacard}}
            <div class="recent-title">Most Recent Metacard</div>
            <button class="navigation-choice is-neutral choice-previous-metacard is-button" title="Most Recent Metacard: {{metacard.metacard.properties.title}}"> 
                <span class="dynamic-text">{{metacard.metacard.properties.title}}</span>
            </button>
        {{/if}}
    </div>
{{/if}}
<div class="is-divider"></div>
<div class="navigation-links">
    <button class="navigation-choice is-neutral choice-about is-button">
        <span class="fa fa-info"></span><span>About</span>
    </button>
</div>
