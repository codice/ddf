<div class="upload-info">
    <div class="info-details">
        <div class="details-top">
            <span class="top-filename">
                {{this.file.name}}
            </span>
        </div>
        <div class="details-bottom">
            <div class="bottom-info">
                <span class="bottom-filesize">
                    {{this.file.size}}
                </span>
                <span class="bottom-filetype">
                    {{this.file.type}}
                </span>
            </div>
            <div class="bottom-percentage">
            </div>
        </div>
    </div>
    <div class="info-progress"></div>
    <div class="info-success">
        <div class="success-message">
            <span class="success-issues fa fa-exclamation-triangle">
            </span>
            <span class="success-validate fa fa-refresh fa-spin is-critical-animation">
            </span>
            <span class="message-text"></span>
        </div>
    </div>
    <div class="info-error">
        <div class="error-message"></div>
    </div>
</div><!--
--><div class="upload-actions">
    <button class="upload-cancel is-negative">
        <span class="fa fa-minus">

        </span>
    </button><!--
    --><div class="upload-expand is-positive">
        <span class="fa fa-check">

        </span>
    </div><!--
    --><div class="upload-fail is-negative">
        <span class="fa fa-exclamation-triangle">

        </span>
    </div>
</div>