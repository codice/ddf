<div class="if-editing">
    <div class='enum-region'>
    </div>
    <div class="for-error">
        <span class="fa fa-exclamation-triangle"></span>
        Not an acceptable value.
    </div>
</div>
<div class="if-viewing">
    <label>
        {{#each this.label}}
            <span>
                <i class="{{this.class}}"></i>
                {{#if this.label}}
                    {{this.label}}
                {{else}}
                    {{this}}
                {{/if}}
            </span>
        {{/each}}
        {{#unless this.label}}
            <span>
                {{this}}
            </span>
        {{/unless}}
    </label>
    <div class="for-error">
        <span class="fa fa-exclamation-triangle"></span>
        Not an acceptable value.
    </div>
</div>