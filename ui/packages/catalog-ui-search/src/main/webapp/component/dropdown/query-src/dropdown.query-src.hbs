<div>
    <div class="dropdown-label">
        Sources:
    </div>
    <div class="dropdown-container">
        <div class="dropdown-text is-input">
            {{#if enterprise}}
                <span class="text-src is-available">
                    All Sources
                </span>
            {{else}}
                {{#each sources}}
                    <span class="text-src {{#if this.available}}is-available{{/if}}">
                        {{#unless available}}
                            <i class="fa fa-exclamation-triangle src-availability">

                            </i>
                        {{/unless}}
                        {{#if local}}
                            <i class="fa source-icon fa-home">
                            </i>
                        {{else}}
                            <i class="fa source-icon fa-cloud">
                            </i>
                        {{/if}}
                        <span class="src-title">
                            {{this.id}}
                        </span>
                    </span>
                {{/each}}
                {{#unless sources}}
                    {{#if isLocalCatalogEnabled}}
                        <span class="text-src is-available">
                            Local Only ({{localCatalog}})
                        </span>
                    {{/if}}
                {{/unless}}
            {{/if}}
        </div>
        <span class="dropdown-icon fa fa-caret-down">
        </span>
    </div>
</div>