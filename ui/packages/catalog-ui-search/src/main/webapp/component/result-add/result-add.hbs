<div class="is-header">
    Add / remove from lists
</div>
<div class="is-divider"></div>
{{#each this}}
    {{#if alreadyContains}}
        <button data-id="{{id}}" class="is-button is-neutral is-existing-list already-contains">
            <span class="fa fa-check-square">

            </span>
            <span class="{{icon}}">

            </span>
            <span>
                {{title}}
            </span>
        </button>
    {{else if matchesFilter}}
        <button data-id="{{id}}" class="is-button is-neutral is-existing-list matches-filter">
            <span class="fa fa-square">

            </span>
            <span class="{{icon}}">

            </span>
            <span>
                {{title}}
            </span>
        </button>
    {{else}}
        <button data-id="{{id}}" class="is-button is-neutral is-existing-list fails-filter is-disabled">
            <span class="fa fa-ban">

            </span>
            <span class="{{icon}}">

            </span>
            <span>
                {{title}}
            </span>
        </button>
    {{/if}}
{{/each}}
<div class="is-divider"></div>
<div class="is-button is-neutral composed-button create-new-list">
</div>