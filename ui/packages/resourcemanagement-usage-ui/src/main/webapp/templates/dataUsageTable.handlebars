    <thead>
        <tr>
            <th class="user-column">User</th>
            <th class="non-user-column">Data Used</th>
            <th class="non-user-column">Data Remaining</th>
            <th class="data-limit-td">Data Limit</th>
        </tr>
    </thead>
    <tbody class="usertabledata">
    {{#each users}}
        <tr>
            <td title={{user}} name="user" class="user-column">{{user}}</td>
            <td title={{usagePercent}} class="non-user-column"> {{usagePercent}}% ({{usage}})
            {{#if notify}}
                <span class="limit-warning">
                <i class="fa fa-exclamation-triangle"></i>
                Limit Reached </span>
            {{/if}}
            </td>
            <td title={{usageRemaining}} class="non-user-column">{{usageRemaining}}</td>
            <td title={{displayLimit}} class="data-limit-td">
            {{#gt displayLimit -2}}
                <input name="{{user}}"
                       type="number"
                       min="-1"
                       max="1000"
                       step="1"
                       value={{displayLimit}}>
                <select name="dataSize">
                    {{#select displaySize}}
                     <option value="MB">MB</option>
                     <option value="GB">GB</option>
                     {{/select}}
                </select>
            {{/gt}}
            </td>
        </tr>
    {{/each}}

    </tbody>