{{#if name}}
<div class="form-horizontal">
    <div class="form-group">
        <label class="col-xs-3 control-label">File name</label>
        <div class="col-xs-9">
            <label class="control-label">{{name}}</label>
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-3 control-label">File size </label>
        <div class="col-xs-9">
            <label class="control-label">{{fileSize size}}</label>
        </div>
    </div>
</div>
{{/if}}

