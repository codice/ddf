<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title">Add Certificate/Key {{type}}</h4>
        </div>

        <div class="modal-body">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#upload" data-toggle="tab">File Upload</a></li>
                <li><a href="#url" data-toggle="tab">HTTPS Import</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="upload">
                    <div class="error-region"></div>

                    <div class="drop-zone">
                        <form class="fileupload">
                            <div class="title">Drag & Drop a File</div>
                            <div class="padding">or select a file to upload</div>
                            <span class="btn btn-default fileinput-button">
                                <div>
                                    <i style="font-size: 32px" class="fa fa-plus"></i>
                                </div>
                                <span>Select File</span>
                                <input type="file" name="files[]">
                            </span>
                        </form>
                    </div>

                    <div class="file-upload-region"></div>

                    <div class="file-edit-region ">

                        <div class="form-horizontal">

                            <div class="form-group has-error">
                                <label for="alias" class="col-xs-3 control-label">Alias</label>
                                <div class="col-xs-9">
                                    <input type="text" class="form-control" id="alias" placeholder="An alias is required.">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="alias" class="col-xs-3 control-label">Key Password</label>
                                <div class="col-xs-9">
                                    <input type="password" class="form-control" id="keypass">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="alias" class="col-xs-3 control-label">Store Password</label>
                                <div class="col-xs-9">
                                    <input type="password" class="form-control" id="storepass">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="url">
                    <div class="url-tab">
                        <input class="urlField col-sm-8" type="text" placeholder="https://<host>:<port>">
                        <a href="#" class="btn btn-info show-url-btn">Show Certificate</a>
                        <div class="url-cert-region">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="btn-group">
                <button type="button" class="btn btn-primary save" aria-hidden="true">Save</button>
                <button type="button" class="btn btn-default cancel" data-dismiss="modal" aria-hidden="true">Cancel</button>
            </div>
        </div>
    </div>
</div>
