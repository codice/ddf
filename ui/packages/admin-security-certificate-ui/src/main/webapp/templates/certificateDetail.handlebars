{{#if error}}
    <div class="cert-callout">
        <h2>{{error}}</h2>
    </div>
{{else}}
{{#each value}}
 <div class="cert-callout">
     <h4 class="cert-title">Certificate {{inc @index}}</h4>
     {{#if success}}
         <h2>Done!</h2>
     {{else}}
     <div class="form-horizontal">
         <div class="form-group">
             <label class="col-sm-3 control-label">Subject DN</label>
             <div class="col-sm-10 form-horizontal-text">
                 <div class="form-horizontal">
                     <div class="form-group">
                         <label class="col-sm-4 control-label">Common Name</label>
                         <div class="col-sm-8 form-horizontal-text">
                             {{subjectDn.commonName}}
                         </div>
                     </div>
                     <div class="form-group">
                         <label class="col-sm-4 control-label">RFC 2253 Name</label>
                         <div class="col-sm-8 form-horizontal-text">
                             {{subjectDn.rFC2253Name}}
                         </div>
                     </div>
                     <div class="form-group">
                         <label class="col-sm-4 control-label">Organization</label>
                         <div class="col-sm-8 form-horizontal-text">
                             {{subjectDn.organization}}
                         </div>
                     </div>
                     <div class="form-group">
                         <label class="col-sm-4 control-label">Organizational Unit</label>
                         <div class="col-sm-8 form-horizontal-text">
                             {{subjectDn.organizationalUnit}}
                         </div>
                     </div>
                     <div class="form-group">
                         <label class="col-sm-4 control-label">Country</label>
                         <div class="col-sm-8 form-horizontal-text">
                             {{subjectDn.country}}
                         </div>
                     </div>
                 </div>
             </div>
         </div>
         <div class="form-group">
             <label class="col-sm-3 control-label">Issuer DN</label>
             <div class="form-horizontal">
                 <div class="col-sm-10 form-horizontal-text">
                     <div class="form-group">
                         <label class="col-sm-4 control-label">Common Name</label>
                         <div class="col-sm-8 form-horizontal-text">
                             {{issuerDn.commonName}}
                         </div>
                     </div>
                     <div class="form-group">
                         <label class="col-sm-4 control-label">RFC 2253 Name</label>
                         <div class="col-sm-8 form-horizontal-text">
                             {{issuerDn.rFC2253Name}}
                         </div>
                     </div>
                     <div class="form-group">
                         <label class="col-sm-4 control-label">Organization</label>
                         <div class="col-sm-8 form-horizontal-text">
                             {{issuerDn.organization}}
                         </div>
                     </div>
                     <div class="form-group">
                         <label class="col-sm-4 control-label">Organizational Unit</label>
                         <div class="col-sm-8 form-horizontal-text">
                             {{issuerDn.organizationalUnit}}
                         </div>
                     </div>
                     <div class="form-group">
                         <label class="col-sm-4 control-label">Country</label>
                         <div class="col-sm-8 form-horizontal-text">
                             {{issuerDn.country}}
                         </div>
                     </div>
                 </div>
             </div>
         </div>
         <div class="form-group">
             <label class="col-sm-3 control-label">Thumbprint</label>
             <div class="col-sm-8 form-horizontal-text">
                 {{thumbprint}}
             </div>
         </div>
         <div class="form-group">
             <label class="col-sm-3 control-label">Type</label>
             <div class="col-sm-8 form-horizontal-text">
                 {{type}}
             </div>
         </div>
         <div class="form-group">
             <label class="col-sm-3 control-label">Not After</label>
             <div class="col-sm-8 form-horizontal-text">
                 {{notAfter}}
             </div>
         </div>
         <div class="form-group">
             <label class="col-sm-3 control-label">Not Before</label>
             <div class="col-sm-8 form-horizontal-text">
                 {{notBefore}}
             </div>
         </div>
         <div class="form-group">
             <label class="col-sm-3 control-label">Extended Key Usage</label>
             <div class="col-sm-8 form-horizontal-text">
                 <ul class="list-group">
                     {{#each extendedKeyUsage}}
                         <li class="list-group-item">{{this}}</li>
                     {{/each}}
                 </ul>
             </div>
         </div>
     </div>
     {{/if}}
 </div>
{{/each}}
{{/if}}