<div class="login-container">
    <div class="form-container">
        <form role="form" id="uploginForm">
            <div id="loginerrorup" class="text-danger" style="display: none;">Credentials are
                invalid.
            </div>
            <div class="form-group login-field">
                <div class="row">
                    <input type="text" id="username" name="username" class="form-control"
                           placeholder="Username"/>
                </div>
                <div class="row">
                    <input type="password" id="password" name="password" class="form-control"
                           placeholder="Password"/>
                </div>
            </div>
            <div class="form-actions btn-group">
                <div id="loginspinner" class="fa fa-spinner fa-spin fa-2x" style="line-height:1.5;display:none;position:absolute;right:225px"></div>
                <button type="button" class="btn btn-medium btn-primary btn-upsignin" style="border-top-left-radius: 4px; border-bottom-left-radius: 4px;">Sign In As User
                </button>
                <button type="button" class="btn btn-medium btn-upclear">Clear</button>
            </div>
        </form>
    </div>
    {{#is pki true}}
        <div class="form-container">
            <form role="form" id="pkiloginForm">
                <div id="loginerrorpki" class="text-danger" style="display: none;">Credentials are
                    invalid.
                </div>
                <div class="form-actions btn-group">
                    <button type="button" class="btn btn-medium btn-primary btn-pkisignin">Sign In
                        With Certificate
                    </button>
                </div>
            </form>
        </div>
    {{/is}}
    {{#is guest true}}
    <div class="form-container">
        <form role="form" id="guestloginForm">
            <div id="loginerrorguest" class="text-danger" style="display: none;">Credentials are
                invalid.
            </div>
            <div class="form-actions btn-group">
                <button type="button" class="btn btn-medium btn-primary btn-guestsignin">Sign In As
                    Guest
                </button>
            </div>
        </form>
    </div>
    {{/is}}
</div>