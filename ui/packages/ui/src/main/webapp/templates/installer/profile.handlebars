<h3>Setup Types</h3>

<div class="well white main-content">
    {{#if profiles}}
        <p class="lead">Choose an installation profile</p>
        <div class="profile-options scroll-area ps-container">
            {{#profiles}}
                <div class="profile-option clearfix">
                    <div class="pull-left">
                        <div class="cell">
                            <input type="radio" name="selectedProfile" value="{{name}}" />
                        </div>
                        <div class="cell">
                            <h2 class="">{{displayName}}</h2>
                            <p>{{description}}</p>
                        </div>
                    </div>
                </div>
            {{/profiles}}
        </div>
    {{else}}
        <p class="lead">
            No setup types are configured on the system.
            <br/>
            <br/>
        </p>
    {{/if}}
</div>
<div class="loading-overlay">
    <div class="block">
        <div class="centered">
            <i class="fa fa-spinner fa-spin fa-5x"></i>
        </div>
    </div>
</div>