<div class="input-group">
    <label for="{{key}}" class="input-group-addon property-label">
        {{title}}

        <a href='#' tabindex="-1" data-toggle="{{key}}-popover">
            <i class="fa fa-question-circle fa-lg"></i>
        </a>

    </label>

    {{#unless options.length}}
        {{#if errorMessage}}
            <input type="text" class="form-control error-border" id={{key}} name="value"
                   placeholder="{{#defaultValue}}{{.}}{{/defaultValue}}"
                   value="{{#value}}{{.}}{{/value}}">
        {{else}}
            <input type="text" class="form-control" id={{key}} name="value"
                   placeholder="{{#defaultValue}}{{.}}{{/defaultValue}}"
                   value="{{#value}}{{.}}{{/value}}">
        {{/if}}

    {{else}}
        <select id="{{key}}" name="value" class="form-control">
            {{#each options}}
                <option value="{{lookup ../options @index}}">{{.}}</option>
            {{/each}}
        </select>
    {{/unless}}

</div>
{{#if errorMessage}}
    <span class="error-text-table">{{errorMessage}}</span>
{{/if}}
