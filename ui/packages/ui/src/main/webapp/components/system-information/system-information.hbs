 {{#if fetched}}
    <div class="information-category">
        <h3>System</h3>
        <div class="information-row" title="System -> Last started: {{startTime}}">
            <div class="row-label">
                Last Started
            </div>
            <div class="row-value">
                {{startTime}}
            </div>
        </div>
        <div class="information-row" title="System -> Uptime: {{uptime}}">
            <div class="row-label">
                Uptime
            </div>
            <div class="row-value">
                {{uptime}}
            </div>
        </div>
    </div>
    <div class="information-category">
        <h3>Java</h3>
        <div class="information-row" title="Java -> Java Runtime: {{runtime}} (build {{runtimeVersion}})">
            <div class="row-label">
                Java Runtime
            </div>
            <div class="row-value">
                {{runtime}} (build {{runtimeVersion}})
            </div>
        </div>
        <div class="information-row" title="Java -> Java Virtual Machine: {{systemInformation.VmName}} (build {{systemInformation.VmVersion}})">
            <div class="row-label">
                Java Virtual Machine
            </div>
            <div class="row-value">
                {{systemInformation.VmName}} (build {{systemInformation.VmVersion}})
            </div>
        </div>
        <div class="information-row" title="Java -> Number of Processors: {{operatingSystem.AvailableProcessors}}">
            <div class="row-label">
                Number of Processors
            </div>
            <div class="row-value">
                {{operatingSystem.AvailableProcessors}}
            </div>
        </div>
        <div class="information-row" title="Java -> Total Memory: {{totalMemory}}">
            <div class="row-label">
                Total Memory
            </div>
            <div class="row-value">
                {{totalMemory}}
            </div>
        </div>
        <div class="information-row" title="Java -> Used Memory: {{usedMemory}}">
            <div class="row-label">
                Used Memory
            </div>
            <div class="row-value">
                {{usedMemory}}
            </div>
        </div>
        <div class="information-row" title="Java -> Free Memory: {{freeMemory}}">
            <div class="row-label">
                Free Memory
            </div>
            <div class="row-value">
                {{freeMemory}}
            </div>
        </div>
    </div>
{{else}}
    <h4 align="center">
        <span class="fa fa-refresh fa-spin fa-5x"></span>
        <div>
            Loading System Information
        </div>
    </h4>
{{/if}}