{{!--
Type definitions
 int	STRING		= 1;
 int	LONG		= 2;
 int	INTEGER		= 3;
 int	SHORT		= 4;
 int	CHARACTER	= 5;
 int	BYTE		= 6;
 int	DOUBLE		= 7;
 int	FLOAT		= 8;
 int	BIGINTEGER	= 9;
 int	BIGDECIMAL	= 10;
 int	BOOLEAN		= 11;
 int	PASSWORD	= 12;
 --}}
 <div>
     {{#if optionValues}}
         {{#is optionValues.length 0}}
             <input type="{{#is type 1}}text{{/is}}{{#is type 5}}text{{/is}}{{#is type 6}}text{{/is}}{{#is type 7}}text{{/is}}{{#is type 8}}text{{/is}}{{#is type 9}}text{{/is}}{{#is type 10}}text{{/is}}{{#is type 12}}password{{/is}}{{#is type 2}}number{{/is}}{{#is type 3}}number{{/is}}{{#is type 4}}number{{/is}}" class="metatype" name="value" value="{{value}}">
         {{/is}}
         {{#isnt optionValues.length 0}}
             <select name="value" class="form-control input-sm">
                 {{#each optionValues}}
                     <option value="{{.}}" {{#is this ../value}}selected="selected" {{/is}}>{{lookup ../optionLabels @index}}</option>
                 {{/each}}
             </select>
         {{/isnt}}
     {{else}}
         <input type="{{#is type 1}}text{{/is}}{{#is type 5}}text{{/is}}{{#is type 6}}text{{/is}}{{#is type 7}}text{{/is}}{{#is type 8}}text{{/is}}{{#is type 9}}text{{/is}}{{#is type 10}}text{{/is}}{{#is type 12}}password{{/is}}{{#is type 2}}number{{/is}}{{#is type 3}}number{{/is}}{{#is type 4}}number{{/is}}" class="metatype" name="value" value="{{value}}">
     {{/if}}
</div>
<div>
    <a href="#" class="fa fa-minus-square fa-lg minus-button"></a>
</div>
