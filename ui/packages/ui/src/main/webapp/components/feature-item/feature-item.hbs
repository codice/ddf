<div class="feature-title">{{name}}</div>
<div class="feature-action">
    {{#is status 'Installed'}}
        <button title="Uninstall {{name}}">
            <span class="fa fa-stop">
            </span>
            <span class="fa fa-spinner fa-spin">
            </span>
            Uninstall
        </button>
    {{/is}}
    {{#is status 'Uninstalled'}}
        <button title="Install {{name}}">
            <span class="fa fa-play">
            </span>
            <span class="fa fa-spinner fa-spin">
            </span>
            Install
        </button>
    {{/is}}
</div>