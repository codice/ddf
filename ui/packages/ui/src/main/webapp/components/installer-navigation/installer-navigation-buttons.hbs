{{#if hasPrevious}}
    {{#ifNotAnd hidePrevious}}
    <li>
        {{#if busy}}
            <a id="previousStep" class="disabled-previous" href="#" > <i class="fa fa-arrow-left"></i> Previous</a>
        {{else}}
            <a id="previousStep" class="previous" href="#" > <i class="fa fa-arrow-left"></i> Previous</a>
        {{/if}}
    </li>
    {{/ifNotAnd}}
{{/if}}
{{#if hasNext}}
    {{#ifNotAnd hasPrevious}}
        <li>
            {{#if busy}}
                <a id="startStep" class="disabled-next" href="#">Start <i class="fa fa-arrow-right"></i></a>
            {{else}}
                <a id="startStep" class="next" href="#">Start  <i class="fa fa-arrow-right"></i></a>
            {{/if}}
        </li>
    {{else}}
        <li>
            {{#if busy}}
                <a id="nextStep" class="disabled-next" href="#">Next  <i class="fa fa-arrow-right"></i></a>
            {{else}}
                <a id="nextStep" class="next" href="#">Next  <i class="fa fa-arrow-right"></i></a>
            {{/if}}
        </li>
    {{/ifNotAnd}}
{{else}}
    <li>
        {{#if busy}}
            <a id="restartLaterStep" class="disabled-next" href="#">Restart Later</a>
            <a id="restartNowStep" class="disabled-next" href="#">Restart Now</a>
        {{else}}
            <a id="restartLaterStep" class="next restart-later" href="#">Restart Later</a>
            <a id="restartNowStep" class="next restart-now" href="#">Restart Now</a>
        {{/if}}
    </li>
{{/if}}