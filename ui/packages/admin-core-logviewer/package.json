{
  "name": "logviewer-ui",
  "author": "Codice",
  "description": "UI for viewing the Karaf Logs in the Admin UI",
  "version": "0.1.0",
  "license": "LGPL-3.0",
  "main": "index.js",
  "scripts": {
    "start": "hotreloadify src/main/webapp/js/index.js --proxy=https://localhost:8993 --open",
    "test": "globstar -- browserify -d ./src/test/js/*.js -o ./target/test.js && tap ./target/test.js",
    "prebuild": "mkdirp ./target/webapp",
    "build": "browserify src/main/webapp/js/index.js > ./target/webapp/bundle.js && ace package",
    "clean": "ace clean"
  },
  "sideEffects": false,
  "keywords": [
    "log",
    "viewer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/codice/ddf.git"
  },
  "dependencies": {
    "@connexta/atlas": "0.0.32",
    "es6-promise": "3.2.1",
    "event-stream": "3.3.2",
    "isomorphic-fetch": "2.2.1",
    "lodash": "4.13.1",
    "moment": "2.22.0",
    "object-hash": "1.1.2",
    "random-item": "1.0.0",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-redux": "6.0.0",
    "react-visibility-sensor": "5.0.2",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "babelify": "7.3.0",
    "browserify": "16.2.3",
    "globstar": "1.0.0",
    "hotreloadify": "0.0.5",
    "mkdirp": "0.5.1",
    "node-lessify": "0.1.4",
    "tap": "5.7.2",
    "tape": "4.5.1",
    "ace": "*"
  },
  "browserify": {
    "transform": [
      "node-lessify",
      [
        "babelify",
        {
          "presets": [
            "stage-0",
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "files": [
    "target/webapp/",
    "src/main/resources"
  ]
}
