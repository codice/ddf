<div id="geonames-config-container" class="tab-content">

    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#URL" aria-controls="URL" role="tab" data-toggle="tab" class="url">URL</a></li>
        <li role="presentation"><a href="#Local" aria-controls="Local" role="tab" data-toggle="tab" class="local">Local</a></li>
    </ul>

    <div role="tabpanel" class="tab-pane active" id="URL">
        <div class="title-header">
            <h4>Upload File From URL</h4><i class="glyphicon glyphicon-question-sign" data-toggle="url-ingest-popover"></i>
        </div>
        <form id="webservice" action="">
            <div>
               <span>Geonames URL : <i class="glyphicon glyphicon-question-sign" data-toggle="url-popover"></i></span><input name="url" type="text" class="text-input-area"><br>
               <input type="checkbox" id="create_index_web" style="margin: 10px 10px 10px 10px;"><span>Overwrite Index</span><i class="glyphicon glyphicon-question-sign" data-toggle="create-index-popover"></i><br>
            </div>
            {{#is state 'uploading-geonames'}}
            <div class="uploadProgressBar">
                <span class="progress-percent-text">{{progress}}%</span> <i class="fa fa-spinner fa-spin"></i>
            </div>
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100" style="width: {{progress}}%;"></div>
            </div>
            {{/is}}
            <div class="ingest-upload-buttons">
                {{#is state 'failed-geonames'}}
                <div class="label label-danger" data-toggle="tooltip" data-placement="left" title="{{error}}">
                    Error!
                </div>
                {{/is}}
                {{#is state 'done-geonames'}}
                <div class="label label-success">
                    Success!
                </div>
                {{/is}}
            </div>

            <button type="button" class="btn btn-primary start-upload-web">
                <i class="fa fa-upload"></i> Start Upload
            </button>
            <hr>
        </form>
    </div>

    <div role="tabpanel" class="tab-pane" id="Local">
        <div class="title-header">
            <h4>Upload File</h4><i class="glyphicon glyphicon-question-sign" data-toggle="local-ingest-popover"></i>
        </div>
        <div class="drop-zone">
            <form class="fileupload" action="">
                <span class="btn btn-default fileinput-button">
                    <i class="glyphicon glyphicon-plus"></i>
                    <span>Select files to upload</span>
                    <input type="file" name="files[]">
                </span>
                <span class="fileupload-dialog">OR drag files to this window. </span>
            </form>
        </div>
        <input type="checkbox" id="create_index_local" style="margin: 10px 10px 10px 10px;"><span>Overwrite Index</span><i class="glyphicon glyphicon-question-sign" data-toggle="create-index-popover"></i><br>
        <div class="file-upload-region"></div>
        <button type="button" class="clear-list-local btn btn-default">Clear</button>
    </div>
</div>

