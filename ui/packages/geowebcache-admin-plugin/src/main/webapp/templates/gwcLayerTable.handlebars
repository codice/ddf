 <table class="table table-striped  table-hover table-condensed">
    <thead>
        <tr>
            <th>Layer Name</th>
            <th>Type</th>
            <th>Url</th>
            <th class="center-column">XML</th>
            <th class="center-column remove-layer">Delete</th>
            <th><a href="#" class="fa fa-plus-square fa-lg plus-button showModal"></th>
        </tr>
    </thead>
    <tbody class="usertabledata">
        {{#each layers}}
            <tr>
                <td class="showUpdateModal">{{name}}</td>
                <td>WMS</td>
                <td>{{xmlUrl}}</td>
                <td class="center-column"><a target="_blank" href="{{layerUrl}}"><i class="fa fa-file-text-o"></i></a></td>
                <td class="center-column remove-layer"><i name={{name}} class="fa fa-trash-o"></i></td>
            </tr>
        {{/each}}
    </tbody>
    </table>
    <div class="update-modal-region"></div>