{
  "name": "message-broker",
  "version": "1.0.0",
  "description": "Configurations and controls for the message broker.",
  "main": "index.js",
  "scripts": {
    "prebuild": "mkdirp ./target/webapp",
    "build": "browserify ./src/main/webapp/index.js > ./target/webapp/bundle.js && ace package",
    "start": "hotreloadify src/main/webapp/index.js --index=src/main/resources/index.html --proxy=https://localhost:8993 --open",
    "clean": "ace clean"
  },
  "author": "Codice",
  "license": "LGPL-3.0",
  "dependencies": {
    "es6-promise": "3.2.1",
    "isomorphic-fetch": "2.2.1",
    "moment": "2.22.0",
    "react": "0.14.8",
    "react-dom": "0.14.8",
    "react-redux": "4.4.5",
    "redux": "3.5.2",
    "redux-thunk": "2.1.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "babelify": "7.3.0",
    "browserify": "13.0.1",
    "globstar": "1.0.0",
    "hotreloadify": "0.0.5",
    "minifyify": "7.3.3",
    "mkdirp": "0.5.1",
    "node-lessify": "0.1.4",
    "tap": "5.7.2",
    "tape": "4.5.1",
    "@connexta/ace": "git://github.com/connexta/ace.git#v0.0.3"
  },
  "browserify": {
    "transform": [
      "node-lessify",
      [
        "babelify",
        {
          "presets": [
            "stage-0",
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "files": [
    "target/webapp/",
    "src/main/resources"
  ],
  "context-path": "/admin/undeliveredMessages"
}
