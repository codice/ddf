<table class="nav-table width-full">
    <tr>
        <td style="width:50.1%">
            {{#isnt back ''}}
                <a href="#" class="back nav-link">
                    {{#is showChevronBack true}}
                        <i class="fa fa-chevron-left"></i>
                    {{/is}}
                    <span id="{{back}}" class="backNavText" name="back">{{back}}</span>
                </a>
            {{/isnt}}
        </td>
        <td style="white-space:nowrap">
            <span class="nav-title" name="title">{{title}}</span>
        </td>
        <td style="width:50.1%">
            {{#isnt forward ''}}
                <a href="#" class="forward nav-link pull-right">
                    <span id="{{forward}}" class="forwardNavText" name="forward">{{forward}}</span>
                    {{#is showChevronForward true}}
                        <i class="fa fa-chevron-right"></i>
                    {{/is}}
                </a>
            {{/isnt}}
        </td>
    </tr>
</table>