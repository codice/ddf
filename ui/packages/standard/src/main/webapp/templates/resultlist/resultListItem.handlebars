{{#if resultSelect}}
    <td class="result-select-column">
        <input class="select-record-checkbox" type="checkbox" {{#if attributes.selectedForSave}}checked="checked"{{/if}}/>
    </td>
{{/if}}
<td>
    <a href="#" class="metacard-link"  title="Title">
        {{#if attributes.properties.attributes.title}}
            {{attributes.properties.attributes.title}}
        {{else}}
            [No Title]
        {{/if}}
    </a>
    <div class="pull-left result-source small-text" title="Source">
        {{attributes.properties.attributes.source-id}}
    </div>
    <div class="pull-right small-text" title="Last Modified">
        {{momentHelp attributes.properties.attributes.modified fromNow=function}}
    </div>
</td>