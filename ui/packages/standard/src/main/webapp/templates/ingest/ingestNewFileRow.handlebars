<div class="file-info-area">
    {{#cancellable}}
        <div class="btn btn-danger btn-xs remove-upload">
            <i class="fa fa-times remove-upload"></i>
        </div>
    {{/cancellable}}
    File: {{name}}
</div>
<div class="ingest-upload-buttons">
    {{#is state 'start'}}
        <div class="label label-default">
            Not Uploaded
        </div>
    {{/is}}
    {{#is state 'failed'}}
        <div class="label label-danger" data-toggle="tooltip" data-placement="left" title="{{error}}">
            Error!
        </div>
    {{/is}}
    {{#is state 'cancelled'}}
        <div class="label label-warning">
            Cancelled
        </div>
    {{/is}}
    {{#is state 'uploading'}}
        <div class="uploadProgressBar">
            <span class="progress-percent-text">{{progress}}%</span> <i class="fa fa-spinner fa-spin"></i>
        </div>
    {{/is}}
    {{#is state 'done'}}
        <div class="label label-success">
            Success!
        </div>
    {{/is}}
</div>
{{#is state 'uploading'}}
<div class="file-progress-area">
    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100" style="width: {{progress}}%;">
        </div>
    </div>
</div>
{{/is}}