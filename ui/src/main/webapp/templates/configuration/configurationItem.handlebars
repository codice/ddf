<div class="{{id}} metatype control-group">
    {{#is type 11}}
            <label class="checkbox">
                <input type="checkbox" name="{{id}}" id="{{id}}" {{#contains defaultValue "true"}}checked{{/contains}}>{{name}}
    {{/is}}
    {{#isnt type 11}}
        <label class="control-label" for="{{id}}">{{name}}</label>
    {{/isnt }}
    {{#if description}}
        <a href='#' class='description' tabindex="-1" data-title='{{id}}'>
            <i class='glyphicon glyphicon-question-sign'></i>
        </a>
    {{/if}}
    {{#is type 11}}
            </label>
    {{/is}}
    {{#isnt type 11}}
        {{#if optionValues}}
            {{#is optionValues.length 0}}
                <input type="{{#is type 1}}text{{/is}}{{#is type 5}}text{{/is}}{{#is type 6}}text{{/is}}{{#is type 7}}text{{/is}}{{#is type 8}}text{{/is}}{{#is type 9}}text{{/is}}{{#is type 10}}text{{/is}}{{#is type 12}}password{{/is}}{{#is type 2}}number{{/is}}{{#is type 3}}number{{/is}}{{#is type 4}}number{{/is}}" class="{{id}} metatype" name="{{id}}" id="{{id}}" value="{{#defaultValue}}{{.}}{{/defaultValue}}">
            {{/is}}
            {{#isnt optionValues.length 0}}
                <select id="{{id}}" name="{{id}}">
                    {{#each optionLabels}}
                        <option value="{{lookup ../optionValues @index}}" {{#is @index 0}}selected="selected" {{/is}}>{{.}}</option>
                    {{/each}}
                </select>
            {{/isnt}}
        {{else}}
            <input type="{{#is type 1}}text{{/is}}{{#is type 5}}text{{/is}}{{#is type 6}}text{{/is}}{{#is type 7}}text{{/is}}{{#is type 8}}text{{/is}}{{#is type 9}}text{{/is}}{{#is type 10}}text{{/is}}{{#is type 12}}password{{/is}}{{#is type 2}}number{{/is}}{{#is type 3}}number{{/is}}{{#is type 4}}number{{/is}}" class="{{id}} metatype" name="{{id}}" id="{{id}}" value="{{#defaultValue}}{{.}}{{/defaultValue}}">
        {{/if}}

    {{/isnt}}
</div>
