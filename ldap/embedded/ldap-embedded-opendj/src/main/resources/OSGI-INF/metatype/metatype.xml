<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

  <OCD name="LDAP Server" id="ddf.ldap.embedded.server.LDAPManager">
    <AD description="Port to listen for LDAP requests. Set to 0 to disable connector." name="LDAP Port" id="ldap.port" required="true"
      type="int" default="1389" />
    <AD description="Port to listen for LDAPS requests. Set to 0 to disable connector." name="LDAPS Port" id="ldaps.port" required="true"
      type="int" default="1636" />
    <AD
      description="Location to the base LDIF file. This should be used to load a base set of users into the LDAP. NOTE: Changing this will clear out backend before importing."
      name="Base LDIF File" id="base.ldif" required="true" type="String" default="" />
  </OCD>

  <Designate pid="ddf.ldap.embedded.server.LDAPManager">
    <Object ocdref="ddf.ldap.embedded.server.LDAPManager" />
  </Designate>

</metatype:MetaData>