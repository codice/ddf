<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.2.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
        >

    <ext:property-placeholder/>

    <bean id="tokenFactory" class="org.codice.ddf.security.handler.api.PKIAuthenticationTokenFactory"
          init-method="init">
        <property name="signaturePropertiesPath" value="${ddf.home}/etc/ws-security/server/signature.properties"/>
    </bean>

    <bean id="handler" class="org.codice.ddf.security.handler.anonymous.AnonymousHandler">
        <property name="tokenFactory" ref="tokenFactory" />
    </bean>

    <service ref="handler" interface="org.codice.ddf.security.handler.api.AuthenticationHandler"
             ranking="0">
    </service>


    <reference id="webBranding" interface="org.apache.felix.webconsole.BrandingPlugin"/>

    <bean id="configurationStore" class="org.codice.ddf.security.handler.anonymous.configuration.Configuration"
          factory-method="getInstance">
        <cm:managed-properties persistent-id="org.codice.ddf.security.handler.anonymous.configuration"
                               update-strategy="container-managed"/>
        <property name="branding" ref="webBranding"/>
    </bean>
</blueprint>
