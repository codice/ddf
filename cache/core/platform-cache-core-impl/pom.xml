<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>ddf.cache.core</groupId>
    <artifactId>cache-core-pom</artifactId>
    <version>2.3.0.ALPHA3-SNAPSHOT</version>
  </parent>
  
  <artifactId>cache-core-impl</artifactId>
  <name>DDF :: Cache :: Core :: Impl</name>
  <packaging>bundle</packaging>
  
      <dependencies>
        <dependency>
            <groupId>ddf.cache.core</groupId>
            <artifactId>cache-core-api</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>

        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
        
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-ext</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>1.7.5</version>
        </dependency>
        
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast</artifactId>
            <version>3.1.3</version>        
        </dependency>
    </dependencies>

    <build>
       <plugins>
           <plugin>
               <groupId>org.apache.felix</groupId>
               <artifactId>maven-bundle-plugin</artifactId>
               <extensions>true</extensions>
               <configuration>
                   <instructions>
                       <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                       <Embed-Dependency>hazelcast</Embed-Dependency>
                       <Import-Package>
                               com.hazelcast.core,
                               com.hazelcast.config,
                               com.hazelcast.nio,
                               *
                       </Import-Package>
                       <Export-Package>
                               com.hazelcast.core,
                               com.hazelcast.config,
                               com.hazelcast.nio,
                               ddf.cache
                       </Export-Package>
                   </instructions>
               </configuration>
           </plugin>
       </plugins>
    </build>
  
</project>