<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">
                {{#if name}}
                    Edit {{name}}
                {{else}}
                    Add Federated Source
                {{/if}}
            </h4>
        </div>
        <div class="modal-body">
            <form class="form-horizontal add-federated-source container-fluid">
                <fieldset>
                    <div class="sourceName"></div>
                    <div class="bound-controls">
                        <div class="control-group">
                            <div class="row vpad">
                            <div class="col-md-4">
                                <label class="control-label">Source Type</label>
                            </div>
                            <div class="controls col-md-7">
                                <select class="form-control input-sm sourceTypesSelect"></select>
                            </div>
                            <div class="col-md-1"></div>
                            </div>
                        </div>
                        <div class="modal-details"></div>
                        <!--<div class="source-buttons"></div>-->

                        <div class='metatype control-group'>
                            <label class="control-label">Source Active</label>
                            <div class="btn-group card-style-toggle" data-toggle="buttons">
                            {{#is currentConfiguration.attributes.properties.attributes.enabled "true"}}
                                <label class="btn active">
                                    <input type="radio" name="enabled" id="enabled" value="true" checked="checked">Enabled</i>
                                </label>
                                <label class="btn">
                                    <input type="radio" name="enabled" id="enabled" value="false">Disabled</i>
                                </label>
                            {{else}}
                                <label class="btn">
                                    <input type="radio" name="enabled" id="enabled" value="true">Enabled</i>
                                </label>
                                <label class="btn active">
                                    <input type="radio" name="enabled" id="enabled" value="false" checked="checked">Disabled</i>
                                </label>
                            {{/is}}
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>

        <div class="modal-footer">
            <div class="btn-group">
                {{#if currentConfiguration.attributes.id}}
	                <button type="button" class="btn btn-primary submit-button">Save</button>
                {{else}}
	                <button type="button" class="btn btn-primary submit-button">Add</button>
                {{/if}}
                <button type="button" class="btn btn-default cancel-button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
