{
  "name": "ddf-theme",
  "version": "0.0.1",
  "description": "DDF's Bootstrap Theme",
  "main": "index.js",
  "scripts": {
    "copy-bootswatch-fonts": "node node_modules/cpr/bin/cpr node_modules/bootswatch/fonts/ src/main/resources/webapp/fonts/bootstrap -o",
    "copy-google-fonts": "node node_modules/cpr/bin/cpr src/main/webapp/google-fonts/ src/main/resources/webapp/fonts -o",
    "copy-fonts": "npm run copy-bootswatch-fonts && npm run  copy-google-fonts",
    "make-folders": "node node_modules/mkdirp/bin/cmd.js src/main/resources/webapp/fonts/bootstrap && node node_modules/mkdirp/bin/cmd.js src/main/resources/webapp/css/",
    "clean": "node node_modules/rimraf/bin.js src/main/resources/webapp && npm run make-folders",
    "test": "echo 'okay';",
    "build": "npm run clean && npm run copy-fonts && npm run build-sass",
    "build-sass": "node node_modules/node-sass/bin/node-sass src/main/webapp/sass/ --output-style compressed -o src/main/resources/webapp/css/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codice/ddf.git"
  },
  "author": "Codice",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/codice/ddf/issues"
  },
  "homepage": "https://github.com/codice/ddf#readme",
  "devDependencies": {
    "bootstrap-sass": "3.3.6",
    "bootswatch": "3.3.7",
    "compass-mixins": "0.12.10",
    "cpr": "3.0.1",
    "mkdirp": "0.5.1",
    "node-sass": "4.7.2",
    "rimraf": "2.6.2",
    "sass-lint": "1.12.1"
  }
}
