<blueprint xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="adminConfigPolicy"
          class="org.codice.ddf.admin.config.policy.AdminConfigPolicy">
        <cm:managed-properties
                persistent-id="org.codice.ddf.admin.config.policy.AdminConfigPolicy"
                update-strategy="container-managed"/>
        <property name="featurePolicies">
            <list>
                <value/>
            </list>
        </property>
        <property name="servicePolicies">
            <list>
                <value/>
            </list>
        </property>
    </bean>

    <service ref="adminConfigPolicy"
             interface="ddf.security.policy.extension.PolicyExtension"/>
</blueprint>
