<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="jolokia" class="org.jolokia.osgi.servlet.JolokiaServlet"/>

    <service interface="javax.servlet.Servlet" ref="jolokia">
        <service-properties>
            <entry key="osgi.http.whiteboard.servlet.pattern" value="/admin/jolokia/*"/>
            <entry key="osgi.http.whiteboard.servlet.name" value="jolokia"/>
            <entry key="osgi.http.whiteboard.context.select" value="(osgi.http.whiteboard.context.path=/)"/>
            <entry key="osgi.http.whiteboard.servlet.asyncSupported" value="true"/>
        </service-properties>
    </service>

</blueprint>