<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <!-- LDAP Wizard and Configuration Handler -->
    <service id="ldapIntroStage" interface="org.codice.ui.admin.wizard.api.StageFactory">
        <bean class="org.codice.ui.admin.ldap.stage.LdapIntroductionStage"/>
    </service>

    <service id="ldapNetworkStage" interface="org.codice.ui.admin.wizard.api.StageFactory">
        <bean class="org.codice.ui.admin.ldap.stage.LdapNetworkSettingsStage"/>
    </service>

    <service id="ldapBindHostStage" interface="org.codice.ui.admin.wizard.api.StageFactory">
        <bean class="org.codice.ui.admin.ldap.stage.LdapBindHostSettingsStage"/>
    </service>

    <service id="ldapDirStage" interface="org.codice.ui.admin.wizard.api.StageFactory">
        <bean class="org.codice.ui.admin.ldap.stage.LdapDirectorySettingsStage"/>
    </service>

    <service id="ldapConfirmationStage" interface="org.codice.ui.admin.wizard.api.StageFactory">
        <bean class="org.codice.ui.admin.ldap.stage.LdapSettingsConfirmationStage"/>
    </service>

    <service id="ldapSuccessStage" interface="org.codice.ui.admin.wizard.api.StageFactory">
        <bean class="org.codice.ui.admin.ldap.stage.LdapSuccessStage"/>
    </service>

    <reference-list id="stages" interface="org.codice.ui.admin.wizard.api.StageFactory"
                    availability="optional"/>

    <service id="ldapConfigurationHandler"
             interface="org.codice.ui.admin.wizard.api.ConfigurationHandler">
        <bean class="org.codice.ui.admin.ldap.config.LdapConfigurationHandler"/>
    </service>

    <reference-list id="configurationHandlers" interface="org.codice.ui.admin.wizard.api.ConfigurationHandler" availability="optional"/>

    <service id="ldapWiz" interface="org.codice.ui.admin.wizard.api.Wizard">
        <bean class="org.codice.ui.admin.ldap.LdapWizard"/>
    </service>

    <!-- Sources Wizard -->
    <bean id="sourcesInitialStage" class="org.codice.ui.admin.sources.stage.SourceWelcomeStage"/>
    <bean id="sourcesDiscoverStage" class="org.codice.ui.admin.sources.stage.SourcesDiscoverStage"/>
    <bean id="sourcesAdvancedStage" class="org.codice.ui.admin.sources.stage.SourcesAdvancedStage"/>
    <bean id="sourcesResultsStage" class="org.codice.ui.admin.sources.stage.SourcesResultsStage"/>
    <bean id="sourcesConfirmationPage" class="org.codice.ui.admin.sources.stage.SourcesConfirmationStage"/>
    <bean id="sourcesPersistedPage" class="org.codice.ui.admin.sources.stage.SourcesPersistedStage"/>


    <service ref="sourcesInitialStage" interface="org.codice.ui.admin.wizard.api.StageFactory"/>
    <service ref="sourcesDiscoverStage" interface="org.codice.ui.admin.wizard.api.StageFactory"/>
    <service ref="sourcesAdvancedStage" interface="org.codice.ui.admin.wizard.api.StageFactory"/>
    <service ref="sourcesResultsStage" interface="org.codice.ui.admin.wizard.api.StageFactory"/>
    <service ref="sourcesConfirmationPage" interface="org.codice.ui.admin.wizard.api.StageFactory"/>
    <service ref="sourcesPersistedPage" interface="org.codice.ui.admin.wizard.api.StageFactory"/>

    <service id="sourcesConfigurationHandler"
             interface="org.codice.ui.admin.wizard.api.ConfigurationHandler">
        <bean class="org.codice.ui.admin.sources.config.SourceConfigurationHandler"/>
    </service>

    <bean id="sourcesWiz" class="org.codice.ui.admin.sources.SourcesWizard"/>

    <service ref="sourcesWiz" interface="org.codice.ui.admin.wizard.api.Wizard"/>

    <!--Wizard router and Sparklet -->
    <reference-list id="wizards" interface="org.codice.ui.admin.wizard.api.Wizard"
                    availability="optional"/>

    <bean id="wizardRouter" class="org.codice.ui.admin.wizard.WizardRouter">
        <property name="contextPath" value="/admin/wizard"/>
        <property name="stages" ref="stages"/>
        <property name="wizards" ref="wizards"/>
        <property name="configurationHandlers" ref="configurationHandlers"/>
    </bean>

    <bean id="sparkServlet" class="org.codice.ui.admin.wizard.SparkServlet">
        <property name="sparkApplications">
            <list>
                <ref component-id="wizardRouter"/>
            </list>
        </property>
        <property name="filterMappingPattern" value="/admin/wizard/*"/>
    </bean>

    <service ref="sparkServlet" interface="javax.servlet.Servlet">
        <service-properties>
            <entry key="urlPatterns" value="/admin/wizard/*"/>
        </service-properties>
    </service>

    <!-- Admin Module Additions -->
    <bean id="securityModule" class="org.codice.ui.admin.ldap.SecurityModule"/>
    <service ref="securityModule" interface="org.codice.ddf.ui.admin.api.module.AdminModule"/>
</blueprint>