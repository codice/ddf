<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="servletMetrics" class="org.codice.ddf.metrics.servlet.ServletMetrics" />

    <service ref="servletMetrics" interface="javax.servlet.Filter" ranking="1000">
        <service-properties>
            <entry key="osgi.http.whiteboard.filter.name" value="metrics-filter"/>
            <entry key="osgi.http.whiteboard.filter.pattern" value="/*"/>
            <entry key="osgi.http.whiteboard.filter.asyncSupported" value="true"/>
            <entry key="osgi.http.whiteboard.context.select" value="(osgi.http.whiteboard.context.name=*)"/>
        </service-properties>
    </service>

</blueprint>