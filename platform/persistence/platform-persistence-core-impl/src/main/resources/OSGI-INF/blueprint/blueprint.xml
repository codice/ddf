<blueprint xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="encryptionService" interface="ddf.security.encryption.EncryptionService"/>

    <bean id="persistentStore" class="org.codice.ddf.persistence.internal.PersistentStoreImpl">
        <cm:managed-properties
                persistent-id="org.codice.ddf.persistence.internal.PersistentStoreImpl"
                update-strategy="container-managed"/>
        <argument
                value="${org.codice.ddf.system.protocol}${org.codice.ddf.system.hostname}:${org.codice.ddf.system.port}/solr"/>
    </bean>

    <service ref="persistentStore" id="persistentStoreService"
             interface="org.codice.ddf.persistence.PersistentStore">
    </service>

</blueprint>
