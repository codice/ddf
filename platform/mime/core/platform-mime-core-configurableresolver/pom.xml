<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>mime-core-pom</artifactId>
        <groupId>ddf.mime.core</groupId>
        <version>2.21.0-SNAPSHOT</version>
    </parent>
    <artifactId>mime-core-configurableresolver</artifactId>
    <name>DDF :: MIME :: Core :: ConfigurableResolver</name>
    <packaging>bundle</packaging>
    <dependencies>
        <dependency>
            <groupId>ddf.mime.core</groupId>
            <artifactId>mime-core-api</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-ext</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-artifacts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>src/main/resources/default-mimetype-csw.config</file>
                                    <type>config</type>
                                    <classifier>default-mimetype-csw</classifier>
                                </artifact>
                                <artifact>
                                    <file>src/main/resources/default-mimetype-geojson.config</file>
                                    <type>config</type>
                                    <classifier>default-mimetype-geojson</classifier>
                                </artifact>
                                <artifact>
                                    <file>src/main/resources/default-mimetype-nitf.config</file>
                                    <type>config</type>
                                    <classifier>default-mimetype-nitf</classifier>
                                </artifact>
                                <artifact>
                                    <file>src/main/resources/default-mimetype-xml.config</file>
                                    <type>config</type>
                                    <classifier>default-mimetype-xml</classifier>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package />
                        <Import-Package>
                            ddf.mime,
                            javax.xml.parsers,
                            org.apache.commons.io,
                            org.apache.commons.lang,
                            org.slf4j,
                            org.slf4j.ext,
                            org.osgi.service.blueprint,
                            org.osgi.service.cm,
                            org.xml.sax,
                            org.w3c.dom
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-check</id>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <haltOnFailure>true</haltOnFailure>
                            <rules>
                                <rule>
                                    <element>BUNDLE</element>
                                    <limits>
                                        <limit implementation="org.codice.jacoco.LenientLimit">
                                            <counter>INSTRUCTION</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.68</minimum>
                                        </limit>
                                        <limit implementation="org.codice.jacoco.LenientLimit">
                                            <counter>BRANCH</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.61</minimum>
                                        </limit>
                                        <limit implementation="org.codice.jacoco.LenientLimit">
                                            <counter>COMPLEXITY</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.36</minimum>
                                        </limit>

                                    </limits>
                                </rule>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
