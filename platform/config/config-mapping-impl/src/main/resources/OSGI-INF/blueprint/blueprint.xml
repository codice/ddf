<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <reference id="config"
               interface="org.codice.ddf.config.ConfigService"
               availability="mandatory"/>

    <reference-list id="mapping.listeners"
                    interface="org.codice.ddf.config.mapping.ConfigMappingListener"
                    availability="optional"/>

    <bean id="mapper"
          class="org.codice.ddf.config.mapping.impl.OSGIConfigMappingService"
          init-method="init"
          destroy-method="close">
        <argument ref="config"/>
        <argument ref="mapping.listeners"/>
    </bean>

    <service ref="mapper">
        <interfaces>
            <value>org.codice.ddf.config.mapping.ConfigMappingService</value>
            <value>org.codice.ddf.config.ConfigListener</value>
        </interfaces>
    </service>
</blueprint>