<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">
    <OCD name="Online Certificate Status Protocol (OCSP)"
         id="org.codice.ddf.security.handler.pki.OcspChecker">
        <AD name="Enable validating a certificate against an OCSP server"
            id="ocspEnabled"
            description="Enables validating a certificate against an Online Certificate Status Protocol (OCSP) server."
            required="true"
            type="Boolean"
            default="false"/>
        <AD name="OCSP server URL"
            id="ocspServerUrl"
            required="true"
            type="String"
            default=""
            description="Sets the Online Certificate Status Protocol (OCSP) server address."/>
    </OCD>
    <Designate pid="org.codice.ddf.security.handler.pki.OcspChecker">
        <Object ocdref="org.codice.ddf.security.handler.pki.OcspChecker"/>
    </Designate>
</metatype:MetaData>
