<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="contextPolicyManager"
               interface="org.codice.ddf.security.policy.context.ContextPolicyManager"/>

    <bean id="filter" class="org.codice.ddf.security.filter.authorization.AuthorizationFilter">
        <cm:managed-properties
                persistent-id="org.codice.ddf.security.filter.authorization.AuthorizationFilter"
                update-strategy="container-managed"/>
        <argument ref="contextPolicyManager"/>
    </bean>

    <service ref="filter"
             interface="org.codice.ddf.platform.filter.SecurityFilter" ranking="98">
        <service-properties>
            <entry key="osgi.http.whiteboard.filter.name" value="authz-filter"/>
        </service-properties>
    </service>

</blueprint>