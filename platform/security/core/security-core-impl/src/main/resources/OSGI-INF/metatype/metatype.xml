<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

    <OCD description="If the NameIDFormat of the SecurityAssertion is neither X509 or persistent,
                        the value of one these configurable attributes will be used instead of the username of the logged in user."
         name="Configuration Username Attribute"
         id="ddf.security.service">

        <AD name="Username Attribute Configuration" id="usernameAttributeList" required="true"
            type="String" cardinality="-100"
            default="http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier, uid"
            description="Comma-delimited list of attributes that will be compared to the SecurityAssertion's list of attributes for replacing the value of the username
            if the value of the NameIDFormat is of a certain type."/>
    </OCD>

    <Designate pid="ddf.security.service">
        <Object ocdref="ddf.security.service"/>
    </Designate>
</metatype:MetaData>