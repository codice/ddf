<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.2.0"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <ext:property-placeholder/>

    <reference id="securityManager" interface="ddf.security.service.SecurityManager"/>

    <bean id="sessionService"
          class="org.codice.ddf.security.servlet.expiry.SessionManagementService">
        <property name="securityManager" ref="securityManager"/>
        <property name="rootContext" value="${org.codice.ddf.system.rootContext}"/>
    </bean>

    <jaxrs:server id=" restService" address="/internal/session">
        <jaxrs:serviceBeans>
            <ref component-id="sessionService"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

</blueprint>