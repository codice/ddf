<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.2.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">


    <service interface="ddf.action.ActionProvider">
        <service-properties>
            <entry key="id" value="security.logout.local"/>
        </service-properties>
        <bean class="org.codice.ddf.security.servlet.logout.LocalLogoutAction">
        </bean>
    </service>

    <reference-list id="logoutActionProvidersList" interface="ddf.action.ActionProvider"
                    filter="(id=security.logout.*)" availability="optional"/>

    <bean id="logoutService" class="org.codice.ddf.security.servlet.logout.LogoutService">
        <cm:managed-properties persistent-id="org.codice.ddf.security.servlet.logout.LogoutService"
                               update-strategy="container-managed"/>
        <property name="logoutActionProviders" ref="logoutActionProvidersList"></property>
        <property name="httpSessionFactory" ref="sessionFactory"></property>
    </bean>

    <jaxrs:server id="restService" address="/logout">
        <jaxrs:serviceBeans>
            <ref component-id="logoutService"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <service interface="javax.servlet.Servlet">
        <service-properties>
            <entry key="alias" value="/logout/local"/>
        </service-properties>
        <bean class="org.codice.ddf.security.servlet.logout.LocalLogoutServlet" init-method="init">
        </bean>
    </service>

    <service interface="ddf.security.http.SessionFactory" id="sessionFactory">
        <service-properties>
            <entry key="id" value="http"/>
        </service-properties>
        <bean class="ddf.security.http.impl.HttpSessionFactory"/>
    </service>

</blueprint>