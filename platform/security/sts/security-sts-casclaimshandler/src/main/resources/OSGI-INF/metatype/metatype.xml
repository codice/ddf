<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.2.0">

  <OCD description="CAS Claims Handler Configuration"
    name="Security STS CAS Claims Handler"
    id="org.codice.ddf.security.claims.cas.CasClaimsHandler">

    <AD name="Attribute Map:" id="attributeMap" required="true" type="String" cardinality="100"
      default=""
      description="List of key-value pairs, each mapping a supported claim to the CAS attribute
                   it should be assigned. Entries must be of the form claim=attribute, and equals
                   signs in the claim must be escaped.">
    </AD>

  </OCD>

  <Designate pid="ddf.security.claims.cas.CasClaimsHandler">
    <Object ocdref="org.codice.ddf.security.claims.cas.CasClaimsHandler"/>
  </Designate>

</metatype:MetaData>