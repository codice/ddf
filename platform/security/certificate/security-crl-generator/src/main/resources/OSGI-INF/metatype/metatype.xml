<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">
    <OCD name="Certificate Revocation List (CRL)"
         id="org.codice.ddf.security.crl.generator.CrlGenerator">
        <AD name="Enable CRL via URL"
            id="crlByUrlEnabled"
            description="Enables retrieving the CRL from a URL."
            required="true"
            type="Boolean"
            default="false"/>
        <AD name="CRL URL address"
            id="crlLocationUrl"
            required="true"
            type="String"
            default=""
            description="Sets the Certificate Revocation List (CRL) file location."/>
    </OCD>
    <Designate pid="org.codice.ddf.security.crl.generator.CrlGenerator">
        <Object ocdref="org.codice.ddf.security.crl.generator.CrlGenerator"/>
    </Designate>
</metatype:MetaData>
