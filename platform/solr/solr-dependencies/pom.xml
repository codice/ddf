<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>solr</artifactId>
        <groupId>ddf.platform.solr</groupId>
        <version>2.10.0-SNAPSHOT</version>
    </parent>
    <artifactId>solr-dependencies</artifactId>
    <name>DDF :: Platform :: Solr :: Dependencies</name>
    <description>Shaded jar of Solr core dependencies.</description>
    <packaging>jar</packaging>
    <dependencies>
        <!-- DDF-915: upgrade commons-fileupload version due to security concerns -->
        <dependency>
            <groupId>commons-fileupload</groupId>
            <artifactId>commons-fileupload</artifactId>
            <version>1.3.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.solr</groupId>
            <artifactId>solr-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.vividsolutions</groupId>
            <artifactId>jts</artifactId>
            <version>1.13</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>
                <configuration>
                    <artifactSet>
                        <includes>
                            <include>org.antlr:antlr4-runtime</include>
                            <include>org.ow2.asm:asm</include>
                            <include>org.ow2.asm:asm-commons</include>
                            <include>com.github.ben-manes.caffeine:caffeine</include>
                            <include>commons-cli:commons-cli</include>
                            <include>commons-codec:commons-codec</include>
                            <include>commons-collections:commons-collections</include>
                            <include>commons-configuration:commons-configuration</include>
                            <include>org.apache.commons:commons-exec</include>
                            <include>commons-fileupload:commons-fileupload</include>
                            <include>commons-io:commons-io</include>
                            <include>commons-lang:commons-lang</include>
                            <include>com.googlecode.concurrentlinkedhashmap:concurrentlinkedhashmap-lru</include>
                            <include>dom4j:dom4j</include>
                            <include>com.google.guava:guava</include>
                            <include>org.apache.hadoop:hadoop-annotations</include>
                            <include>org.apache.hadoop:hadoop-auth</include>
                            <include>org.apache.hadoop:hadoop-common</include>
                            <include>org.apache.hadoop:hadoop-hdfs</include>
                            <include>com.carrotsearch:hppc</include>
                            <include>org.htrace:htrace-core</include>
                            <include>org.apache.httpcomponents:httpclient</include>
                            <include>org.apache.httpcomponents:httpcore</include>
                            <include>org.apache.httpcomponents:httpmime</include>
                            <include>com.fasterxml.jackson.core:jackson-core</include>
                            <include>com.fasterxml.jackson.dataformat:jackson-dataformat-smile</include>
                            <include>joda-time:joda-time</include>
                            <include>com.vividsolutions:jts</include>
                            <include>org.apache.lucene:lucene-analyzers-common</include>
                            <include>org.apache.lucene:lucene-analyzers-kuromoji</include>
                            <include>org.apache.lucene:lucene-analyzers-phonetic</include>
                            <include>org.apache.lucene:lucene-backward-codecs</include>
                            <include>org.apache.lucene:lucene-codecs</include>
                            <include>org.apache.lucene:lucene-core</include>
                            <include>org.apache.lucene:lucene-expressions</include>
                            <include>org.apache.lucene:lucene-grouping</include>
                            <include>org.apache.lucene:lucene-highlighter</include>
                            <include>org.apache.lucene:lucene-join</include>
                            <include>org.apache.lucene:lucene-memory</include>
                            <include>org.apache.lucene:lucene-misc</include>
                            <include>org.apache.lucene:lucene-queries</include>
                            <include>org.apache.lucene:lucene-queryparser</include>
                            <include>org.apache.lucene:lucene-sandbox</include>
                            <include>org.apache.lucene:lucene-spatial-extras</include>
                            <include>org.apache.lucene:lucene-suggest</include>
                            <include>org.noggit:noggit</include>
                            <include>org.restlet.jee:org.restlet</include>
                            <include>org.restlet.jee:org.restlet.ext.servlet</include>
                            <include>com.facebook.presto:presto-parser</include>
                            <include>com.google.protobuf:protobuf-java</include>
                            <include>io.airlift:slice</include>
                            <include>org.apache.solr:solr-core</include>
                            <include>org.apache.solr:solr-solrj</include>
                            <include>org.locationtech.spatial4j:spatial4j</include>
                            <include>org.codehaus.woodstox:stax2-api</include>
                            <include>com.tdunning:t-digest</include>
                            <include>org.codehaus.woodstox:woodstox-core-asl</include>
                            <include>org.apache.zookeeper:zookeeper</include>
                        </includes>
                    </artifactSet>
                    <filters>
                        <filter>
                            <artifact>*:*</artifact>
                            <excludes>
                                <exclude>META-INF/*.SF</exclude>
                                <exclude>META-INF/*.DSA</exclude>
                                <exclude>META-INF/*.RSA</exclude>
                            </excludes>
                        </filter>
                    </filters>
                    <transformers>
                        <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                    </transformers>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>